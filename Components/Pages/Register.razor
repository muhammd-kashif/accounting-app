@page "/register"
@rendermode InteractiveServer
@using AccountingApp.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation
@layout Layout.EmptyLayout

<div class="min-h-screen bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-2xl w-full max-w-md p-8">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800">ğŸ“ Register</h1>
            <p class="text-gray-500 mt-2">Create your account</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                @errorMessage
            </div>
        }

        <div class="space-y-4">
            <div>
                <label class="block text-gray-700 font-semibold mb-2">ğŸ‘¤ Full Name</label>
                <input type="text"
                       @bind="fullName"
                       placeholder="Full Name"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg">
            </div>

            <div>
                <label class="block text-gray-700 font-semibold mb-2">ğŸ“§ Email</label>
                <input type="email"
                       @bind="registerEmail"
                       placeholder="Email"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg">
            </div>

            <div>
                <label class="block text-gray-700 font-semibold mb-2">ğŸ” Password</label>
                <input type="password"
                       @bind="registerPassword"
                       placeholder="Password (min 6)"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg">
            </div>

            <button @onclick="HandleRegister"
                    class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-2 rounded-lg">
                âœ… Create Account
            </button>

            <button @onclick="GoToLogin"
                    class="w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 rounded-lg">
                ğŸ”“ Back to Login
            </button>
        </div>
    </div>
</div>

@code {
    private string fullName = "";
    private string registerEmail = "";
    private string registerPassword = "";
    private string errorMessage = "";

    private async Task HandleRegister()
    {
        errorMessage = "";
        if (string.IsNullOrEmpty(fullName) || string.IsNullOrEmpty(registerEmail) || string.IsNullOrEmpty(registerPassword))
        {
            errorMessage = "All fields required hain";
            return;
        }

        var result = await AuthService.RegisterAsync(registerEmail, registerPassword, fullName);
        if (result.Success)
        {
            Navigation.NavigateTo("/dashboard");
        }
        else
        {
            errorMessage = result.Message;
        }
    }

    private void GoToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}

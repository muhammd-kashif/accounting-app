@page "/stock-report"
@rendermode InteractiveServer
@using AccountingApp.Services
@using AccountingApp.Models
@inject IProductService ProductService
@inject IPurchaseService PurchaseService
@inject ISaleService SaleService

<div class="p-4 md:p-8 bg-gray-100 min-h-screen">
    <div class="mb-6 md:mb-8">
        <h1 class="text-4xl font-bold text-gray-800">üìä Stock Report</h1>
        <p class="text-gray-600 mt-2">Complete inventory tracking with purchase and sale history</p>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">Total Items</p>
            <p class="text-3xl font-bold text-indigo-600">@inventoryProducts.Count</p>
            <p class="text-xs text-gray-400 mt-1">Inventory Items</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">Current Stock</p>
            <p class="text-3xl font-bold text-green-600">@inventoryProducts.Sum(p => p.StockQuantity)</p>
            <p class="text-xs text-gray-400 mt-1">Total Units</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">Total Purchased</p>
            <p class="text-3xl font-bold text-blue-600">@totalPurchasedQty</p>
            <p class="text-xs text-gray-400 mt-1">Units</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">Total Sold</p>
            <p class="text-3xl font-bold text-orange-600">@totalSoldQty</p>
            <p class="text-xs text-gray-400 mt-1">Units</p>
        </div>
    </div>

    <!-- Search Bar -->
    <div class="mb-6">
        <div class="relative max-w-md">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
                üîç
            </span>
            <input type="text" @bind="searchTerm" @bind:event="oninput" 
                   class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                   placeholder="Search items...">
        </div>
    </div>

    <!-- Stock Report Table -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full min-w-[1000px]">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="px-4 py-3 text-left font-semibold">Item Name</th>
                        <th class="px-4 py-3 text-left font-semibold">SKU</th>
                        <th class="px-4 py-3 text-right font-semibold">Current Stock</th>
                        <th class="px-4 py-3 text-right font-semibold">Purchased</th>
                        <th class="px-4 py-3 text-right font-semibold">Sold</th>
                        <th class="px-4 py-3 text-right font-semibold">Stock Value</th>
                        <th class="px-4 py-3 text-center font-semibold">Status</th>
                        <th class="px-4 py-3 text-center font-semibold">Actions</th>
                    </tr>
    
                </thead>
                <tbody>
                    @if (!GetFilteredProducts().Any())
                    {
                        <tr>
                            <td colspan="8" class="px-4 py-8 text-center text-gray-400">
                                No inventory items found.
                            </td>
                        </tr>
                    }
                    @foreach (var product in GetFilteredProducts())
                    {
                        var purchased = GetPurchasedQuantity(product.Id);
                        var sold = GetSoldQuantity(product.Id);
                        var stockValue = product.StockQuantity * product.PurchasePrice;
                        var status = product.StockQuantity <= product.ReorderLevel ? "Low Stock" : "In Stock";
                        
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-4 py-3 font-semibold">@product.ItemName</td>
                            <td class="px-4 py-3 text-gray-500">@product.SKU</td>
                            <td class="px-4 py-3 text-right">
                                <span class="@(product.StockQuantity <= product.ReorderLevel ? "text-red-600 font-bold" : "text-gray-800 font-semibold")">
                                    @product.StockQuantity
                                </span>
                            </td>
                            <td class="px-4 py-3 text-right text-blue-600 font-semibold">@purchased</td>
                            <td class="px-4 py-3 text-right text-orange-600 font-semibold">@sold</td>
                            <td class="px-4 py-3 text-right text-green-600 font-semibold">@stockValue.ToString("C")</td>
                            <td class="px-4 py-3 text-center">
                                <span class="px-2 py-1 rounded text-xs font-medium @(status == "Low Stock" ? "bg-red-100 text-red-800" : "bg-green-100 text-green-800")">
                                    @status
                                </span>
                            </td>
                            <td class="px-4 py-3 text-center">
                                <button @onclick="() => ShowDetails(product.Id)" class="bg-indigo-500 hover:bg-indigo-600 text-white px-3 py-1 rounded text-sm">
                                    üìã Details
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-gray-50 font-bold">
                    <tr>
                        <td colspan="2" class="px-4 py-3 text-right">Totals:</td>
                        <td class="px-4 py-3 text-right text-gray-800">@inventoryProducts.Sum(p => p.StockQuantity)</td>
                        <td class="px-4 py-3 text-right text-blue-600">@totalPurchasedQty</td>
                        <td class="px-4 py-3 text-right text-orange-600">@totalSoldQty</td>
                        <td class="px-4 py-3 text-right text-green-600">@inventoryProducts.Sum(p => p.StockQuantity * p.PurchasePrice).ToString("C")</td>
                        <td colspan="2"></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <!-- Details Modal -->
    @if (showDetailsModal && selectedProduct != null)
    {
        <div class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4" @onclick="CloseDetails">
            <div class="bg-white rounded-lg shadow-xl w-full max-w-4xl max-h-[90vh] overflow-y-auto" @onclick:stopPropagation="true">
                <div class="sticky top-0 bg-white border-b px-6 py-4 flex justify-between items-center">
                    <h2 class="text-2xl font-bold">üìã @selectedProduct.ItemName - Stock Details</h2>
                    <button @onclick="CloseDetails" class="text-gray-500 hover:text-gray-700 text-2xl font-bold">‚úñ</button>
                </div>

                <div class="p-6">
                    <!-- Product Info -->
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
                        <div class="bg-gray-50 p-3 rounded">
                            <p class="text-sm text-gray-500">SKU</p>
                            <p class="font-semibold">@selectedProduct.SKU</p>
                        </div>
                        <div class="bg-gray-50 p-3 rounded">
                            <p class="text-sm text-gray-500">Current Stock</p>
                            <p class="font-semibold text-green-600">@selectedProduct.StockQuantity</p>
                        </div>
                        <div class="bg-gray-50 p-3 rounded">
                            <p class="text-sm text-gray-500">Purchase Price</p>
                            <p class="font-semibold">@selectedProduct.PurchasePrice.ToString("C")</p>
                        </div>
                        <div class="bg-gray-50 p-3 rounded">
                            <p class="text-sm text-gray-500">Sale Price</p>
                            <p class="font-semibold">@selectedProduct.SalePrice.ToString("C")</p>
                        </div>
                    </div>

                    <!-- History Sections -->
                    <div class="space-y-6">
                        <!-- Purchase History -->
                        <div>
                            <div class="flex items-center gap-2 mb-3 cursor-pointer select-none hover:bg-gray-100 p-2 rounded transition-colors" @onclick="() => showPurchaseHistory = !showPurchaseHistory">
                                <span class="text-xl">üì•</span>
                                <h3 class="font-bold text-gray-700">Purchase History</h3>
                                <span class="text-xs text-gray-400">@(showPurchaseHistory ? "‚ñ≤ Hide" : "‚ñº Show")</span>
                            </div>
                            
                            @if (showPurchaseHistory)
                            {
                                var history = GetProductPurchases(selectedProduct.Id);
                                @if (history.Any())
                                {
                                    <div class="bg-blue-50/50 rounded-lg overflow-hidden border border-blue-100 animate-in fade-in duration-300">
                                        <table class="w-full text-sm">
                                            <thead class="bg-blue-100/50">
                                                <tr>
                                                    <th class="px-4 py-2 text-left">Date</th>
                                                    <th class="px-4 py-2 text-left">Supplier</th>
                                                    <th class="px-4 py-2 text-right">Qty</th>
                                                    <th class="px-4 py-2 text-right">Rate</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var p in history)
                                                {
                                                    <tr class="border-b border-blue-100 last:border-0">
                                                        <td class="px-4 py-2">@p.Purchase.Date.ToString("dd MMM yy")</td>
                                                        <td class="px-4 py-2">@p.Purchase.Supplier?.SupplierName</td>
                                                        <td class="px-4 py-2 text-right font-semibold">@p.Quantity</td>
                                                        <td class="px-4 py-2 text-right">Rs. @p.Rate.ToString("N0")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-center text-gray-400 py-4 italic text-sm">No purchase history found</p>
                                }
                            }
                        </div>

                        <!-- Sale History -->
                        <div>
                            <div class="flex items-center gap-2 mb-3 cursor-pointer select-none hover:bg-gray-100 p-2 rounded transition-colors" @onclick="() => showSaleHistory = !showSaleHistory">
                                <span class="text-xl">üì§</span>
                                <h3 class="font-bold text-gray-700">Sale History</h3>
                                <span class="text-xs text-gray-400">@(showSaleHistory ? "‚ñ≤ Hide" : "‚ñº Show")</span>
                            </div>
                            
                            @if (showSaleHistory)
                            {
                                var history = GetProductSales(selectedProduct.Id);
                                @if (history.Any())
                                {
                                    <div class="bg-green-50/50 rounded-lg overflow-hidden border border-green-100 animate-in fade-in duration-300">
                                        <table class="w-full text-sm">
                                            <thead class="bg-green-100/50">
                                                <tr>
                                                    <th class="px-4 py-2 text-left">Date</th>
                                                    <th class="px-4 py-2 text-left">Customer</th>
                                                    <th class="px-4 py-2 text-right">Qty</th>
                                                    <th class="px-4 py-2 text-right">Price</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var s in history)
                                                {
                                                    <tr class="border-b border-green-100 last:border-0">
                                                        <td class="px-4 py-2">@s.Sale.SaleDate.ToString("dd MMM yy")</td>
                                                        <td class="px-4 py-2">@s.Sale.Customer?.Name</td>
                                                        <td class="px-4 py-2 text-right font-semibold">@s.Quantity</td>
                                                        <td class="px-4 py-2 text-right">Rs. @s.UnitPrice.ToString("N0")</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-center text-gray-400 py-4 italic text-sm">No sale history found</p>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Product> inventoryProducts = new();
    private List<Purchase> purchases = new();
    private List<Sale> sales = new();
    private string searchTerm = string.Empty;
    private int currentUserId = 1;
    
    private bool showDetailsModal = false;
    private Product? selectedProduct = null;
    private bool showPurchaseHistory = false;
    private bool showSaleHistory = false;
    
    private int totalPurchasedQty = 0;
    private int totalSoldQty = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        var allProducts = await ProductService.GetAllAsync(currentUserId);
        inventoryProducts = allProducts.Where(p => p.ItemType == "Inventory").ToList();
        purchases = await PurchaseService.GetAllAsync(currentUserId);
        sales = await SaleService.GetAllAsync(currentUserId);
        
        // Calculate totals
        totalPurchasedQty = purchases
            .SelectMany(p => p.Items)
            .Where(i => inventoryProducts.Any(prod => prod.Id == i.ProductId))
            .Sum(i => i.Quantity);
            
        totalSoldQty = sales
            .SelectMany(s => s.SaleItems)
            .Where(si => si.Item != null && inventoryProducts.Any(prod => prod.ItemName == si.Item.Name))
            .Sum(i => i.Quantity);
    }

    private IEnumerable<Product> GetFilteredProducts()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
            return inventoryProducts.OrderBy(p => p.ItemName);

        return inventoryProducts.Where(p =>
            (p.ItemName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
            (p.SKU?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
        ).OrderBy(p => p.ItemName);
    }

    private int GetPurchasedQuantity(int productId)
    {
        return purchases
            .SelectMany(p => p.Items)
            .Where(i => i.ProductId == productId)
            .Sum(i => i.Quantity);
    }

    private int GetSoldQuantity(int productId)
    {
        var product = inventoryProducts.FirstOrDefault(p => p.Id == productId);
        if (product == null) return 0;
        
        // Match by item name (since Items and Products are separate)
        return sales
            .SelectMany(s => s.SaleItems)
            .Where(si => si.Item != null && si.Item.Name.Equals(product.ItemName, StringComparison.OrdinalIgnoreCase))
            .Sum(i => i.Quantity);
    }

    private void ShowDetails(int productId)
    {
        selectedProduct = inventoryProducts.FirstOrDefault(p => p.Id == productId);
        showPurchaseHistory = false; // Reset toggles when opening details
        showSaleHistory = false;
        showDetailsModal = true;
    }

    private void CloseDetails()
    {
        showDetailsModal = false;
        selectedProduct = null;
    }

    private List<PurchaseItem> GetProductPurchases(int productId)
    {
        return purchases
            .SelectMany(p => p.Items.Select(pi => new { Purchase = p, Item = pi }))
            .Where(x => x.Item.ProductId == productId)
            .Select(x =>
            {
                x.Item.Purchase = x.Purchase;
                return x.Item;
            })
            .OrderByDescending(pi => pi.Purchase.Date)
            .ToList();
    }

    private List<SaleItem> GetProductSales(int productId)
    {
        var product = inventoryProducts.FirstOrDefault(p => p.Id == productId);
        if (product == null) return new List<SaleItem>();

        // Match by item name - case insensitive and trimmed
        var pName = product.ItemName.Trim();
        
        return sales
            .SelectMany(s => s.SaleItems.Select(si => new { Sale = s, SaleItem = si }))
            .Where(x => x.SaleItem.Item != null && x.SaleItem.Item.Name.Trim().Equals(pName, StringComparison.OrdinalIgnoreCase))
            .Select(x =>
            {
                x.SaleItem.Sale = x.Sale;
                return x.SaleItem;
            })
            .OrderByDescending(si => si.Sale.SaleDate)
            .ToList();
    }

    private int GetTotalSoldByItemName(string itemName)
    {
        if (string.IsNullOrEmpty(itemName)) return 0;
        var trimmedName = itemName.Trim();
        
        return sales
            .SelectMany(s => s.SaleItems)
            .Where(si => si.Item != null && si.Item.Name.Trim().Equals(trimmedName, StringComparison.OrdinalIgnoreCase))
            .Sum(si => si.Quantity);
    }
}

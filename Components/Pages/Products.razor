@page "/products"
@rendermode InteractiveServer
@using AccountingApp.Services
@using AccountingApp.Models
@inject IProductService ProductService
@inject IExpenseService ExpenseService
@inject IJSRuntime JSRuntime

<div class="p-4 md:p-8 bg-gray-100 min-h-screen">
    <div class="mb-6 md:mb-8 flex flex-col md:flex-row md:justify-between md:items-center gap-4">
        <h1 class="text-4xl font-bold text-gray-800">üì¶ Stock Management</h1>
        <button @onclick="OpenAddForm" class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-6 rounded-lg w-full md:w-auto">
            ‚ûï New Item
        </button>
    </div>

    <!-- Low Stock Alert -->
    @if (lowStockProducts != null && lowStockProducts.Any())
    {
        <div class="mb-6 bg-yellow-50 border border-yellow-300 rounded-lg p-4">
            <h3 class="text-lg font-semibold text-yellow-800 mb-2">‚ö†Ô∏è Low Stock Alert</h3>
            <div class="flex flex-wrap gap-2">
                @foreach (var p in lowStockProducts)
                {
                    <span class="bg-yellow-200 text-yellow-900 px-3 py-1 rounded-full text-sm font-medium">
                        @p.ItemName ‚Äî @p.StockQuantity left
                    </span>
                }
            </div>
        </div>
    }

    <!-- Add/Edit Modal -->
    @if (showForm)
    {
        <div class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4" @onclick="CloseForm" @onclick:stopPropagation="false">
            <div class="bg-white rounded-lg shadow-xl w-full max-w-lg p-6 max-h-[90vh] overflow-y-auto" @onclick:stopPropagation="true">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-2xl font-semibold">@(isEditing ? "‚úèÔ∏è Edit Item" : "‚ûï Add New Item")</h2>
                    <button @onclick="CloseForm" class="text-gray-500 hover:text-gray-700 text-xl font-bold">‚úñ</button>
                </div>

                @if (!string.IsNullOrEmpty(formError))
                {
                    <div class="bg-red-50 border border-red-300 text-red-700 px-4 py-2 rounded-lg mb-4 text-sm">@formError</div>
                }

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Item Name *</label>
                        <input type="text" @bind="formName" placeholder="e.g. Ball Pen" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-300 focus:border-indigo-500">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Item Type</label>
                        <select @bind="formType" class="w-full px-4 py-2 border rounded-lg">
                            <option value="Inventory">Inventory (Stock Track)</option>
                            <option value="Non-Inventory">Non-Inventory</option>
                            <option value="Service">Service</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">SKU / Code</label>
                        <input type="text" @bind="formSKU" placeholder="e.g. BP-001" class="w-full px-4 py-2 border rounded-lg">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Purchase Price (Cost)</label>
                        <input type="number" step="0.01" @bind="formPurchasePrice" class="w-full px-4 py-2 border rounded-lg">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Sale Price</label>
                        <input type="number" step="0.01" @bind="formSalePrice" class="w-full px-4 py-2 border rounded-lg">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Stock Quantity</label>
                        <input type="number" @bind="formStock" class="w-full px-4 py-2 border rounded-lg">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Reorder Level</label>
                        <input type="number" @bind="formReorder" class="w-full px-4 py-2 border rounded-lg">
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                        <textarea @bind="formDescription" placeholder="Item description..." rows="2" class="w-full px-4 py-2 border rounded-lg"></textarea>
                    </div>
                </div>

                <div class="flex justify-end gap-3">
                    <button @onclick="CloseForm" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-6 rounded-lg">
                        Cancel
                    </button>
                    <button @onclick="HandleSave" disabled="@isSaving" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-6 rounded-lg disabled:opacity-50">
                        @(isSaving ? "Saving..." : "Save")
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">üì¶ Inventory Items</p>
            <p class="text-2xl font-bold text-indigo-600">@products.Count(p => p.ItemType == "Inventory")</p>
            <p class="text-xs text-gray-400 mt-1">Stock Tracked</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">üìã Non-Inventory</p>
            <p class="text-2xl font-bold text-purple-600">@products.Count(p => p.ItemType != "Inventory")</p>
            <p class="text-xs text-gray-400 mt-1">No Stock Track</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">Total Stock Qty</p>
            <p class="text-2xl font-bold text-green-600">@products.Where(p => p.ItemType == "Inventory").Sum(p => p.StockQuantity)</p>
            <p class="text-xs text-gray-400 mt-1">Inventory Only</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">Stock Value</p>
            <p class="text-2xl font-bold text-orange-600">@products.Where(p => p.ItemType == "Inventory").Sum(p => p.PurchasePrice * p.StockQuantity).ToString("C")</p>
            <p class="text-xs text-gray-400 mt-1">Inventory Cost</p>
        </div>
    </div>

    <!-- SEARCH BAR -->
    <div class="mb-6">
        <div class="relative w-full md:max-w-md">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
                üîç
            </span>
            <input type="text" @bind="searchTerm" @bind:event="oninput" 
                   class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg leading-5 bg-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" 
                   placeholder="Search (Name, SKU, Type)...">
        </div>
    </div>

    <!-- Tab Navigation -->
    <div class="mb-4 border-b border-gray-200 overflow-x-auto">
        <nav class="-mb-px flex space-x-8 min-w-max">
            <button @onclick='() => activeTab = "inventory"' 
                    class="@(activeTab == "inventory" ? "border-indigo-500 text-indigo-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm">
                üì¶ Inventory Items (@products.Count(p => p.ItemType == "Inventory"))
            </button>
            <button @onclick='() => activeTab = "non-inventory"' 
                    class="@(activeTab == "non-inventory" ? "border-purple-500 text-purple-600" : "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300") whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm flex items-center gap-2">
                üìã Non-Inventory / Services (@products.Count(p => p.ItemType != "Inventory"))
                @if (activeTab == "non-inventory")
                {
                    <button @onclick="OpenAddNonInventoryForm" @onclick:stopPropagation="true" class="bg-purple-100 text-purple-600 hover:bg-purple-200 px-2 py-0.5 rounded text-[10px] font-bold border border-purple-200">
                        + NEW
                    </button>
                }
            </button>
        </nav>
    </div>

    <!-- Inventory Items Table -->
    @if (activeTab == "inventory")
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-blue-50 px-4 py-3 border-b border-blue-200">
                <p class="text-sm text-blue-800">
                    <strong>üì¶ Inventory Items:</strong> Stock is tracked with quantity, cost, and reorder levels.
                </p>
            </div>
            
            <!-- Mobile Card View -->
            <div class="block md:hidden pb-4">
                 @if (!GetFilteredInventoryProducts().Any())
                {
                    <div class="p-8 text-center text-gray-500">No inventory items found.</div>
                }
                else 
                {
                    <div class="space-y-4 px-4 pt-4">
                        @foreach (var product in GetFilteredInventoryProducts())
                        {
                             var pid = product.Id;
                             <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100 flex flex-col gap-3">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <div class="font-bold text-gray-800 text-lg">@product.ItemName</div>
                                        <div class="text-xs text-gray-500">SKU: @product.SKU</div>
                                    </div>
                                    <div class="text-right">
                                         <div class="text-xs text-gray-400 font-bold uppercase">Stock</div>
                                         <div class="font-bold text-xl @(product.StockQuantity <= product.ReorderLevel ? "text-red-600" : "text-gray-800")">
                                             @product.StockQuantity
                                         </div>
                                    </div>
                                </div>

                                <div class="grid grid-cols-2 gap-2 text-sm bg-gray-50 p-2 rounded border border-gray-50">
                                    <div>
                                        <span class="text-gray-400 text-xs block">Sale Price</span>
                                        <span class="font-bold text-green-600">@product.SalePrice.ToString("C")</span>
                                    </div>
                                    <div class="text-right">
                                        <span class="text-gray-400 text-xs block">Cost</span>
                                        <span class="font-medium text-gray-600">@product.PurchasePrice.ToString("C")</span>
                                    </div>
                                </div>

                                <div class="flex gap-2 justify-end border-t pt-2">
                                    <button @onclick="() => OpenEditForm(pid)" class="bg-blue-50 text-blue-600 px-3 py-2 rounded-lg text-sm font-bold flex-1 flex items-center justify-center gap-2">
                                        ‚úèÔ∏è Edit
                                    </button>
                                    <button @onclick="() => HandleDelete(pid)" class="bg-red-50 text-red-600 px-3 py-2 rounded-lg text-sm font-bold flex items-center justify-center gap-2">
                                        üóëÔ∏è
                                    </button>
                                </div>
                             </div>
                        }
                    </div>
                }
            </div>

            <!-- Desktop Table View -->
            <div class="hidden md:block overflow-x-auto">
                <table class="w-full min-w-[900px]">
                    <thead class="bg-gray-200">
                        <tr>
                            <th class="px-4 py-3 text-left font-semibold">Item Name</th>
                            <th class="px-4 py-3 text-left font-semibold">SKU</th>
                            <th class="px-4 py-3 text-right font-semibold">Cost Price</th>
                            <th class="px-4 py-3 text-right font-semibold">Sale Price</th>
                            <th class="px-4 py-3 text-right font-semibold">Stock Qty</th>
                            <th class="px-4 py-3 text-right font-semibold">Reorder Level</th>
                            <th class="px-4 py-3 text-center font-semibold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!GetFilteredInventoryProducts().Any())
                        {
                            <tr>
                                <td colspan="7" class="px-4 py-8 text-center text-gray-400">
                                    No inventory items found.
                                </td>
                            </tr>
                        }
                        @foreach (var product in GetFilteredInventoryProducts())
                        {
                            var pid = product.Id;
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-4 py-3 font-semibold">@product.ItemName</td>
                                <td class="px-4 py-3 text-gray-500">@product.SKU</td>
                                <td class="px-4 py-3 text-right">@product.PurchasePrice.ToString("C")</td>
                                <td class="px-4 py-3 text-right text-green-600 font-semibold">@product.SalePrice.ToString("C")</td>
                                <td class="px-4 py-3 text-right">
                                    <span class="@(product.StockQuantity <= product.ReorderLevel ? "text-red-600 font-bold" : "text-gray-800")">
                                        @product.StockQuantity
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-right text-gray-500">@product.ReorderLevel</td>
                                <td class="px-4 py-3 text-center">
                                    <button @onclick="() => OpenEditForm(pid)" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded mr-1 text-sm">
                                        ‚úèÔ∏è Edit
                                    </button>
                                    <button @onclick="() => HandleDelete(pid)" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm">
                                        üóëÔ∏è Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Non-Inventory Items Table -->
    @if (activeTab == "non-inventory")
    {
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-purple-50 px-4 py-3 border-b border-purple-200">
                <p class="text-sm text-purple-800">
                    <strong>üìã Non-Inventory Items:</strong> No stock tracking. Used for services, one-time purchases, etc.
                </p>
            </div>
            
            <!-- Mobile Card View -->
            <div class="block md:hidden pb-4">
                 @if (!GetFilteredNonInventoryProducts().Any())
                {
                    <div class="p-8 text-center text-gray-500">No items found.</div>
                }
                else 
                {
                    <div class="space-y-4 px-4 pt-4">
                        @foreach (var product in GetFilteredNonInventoryProducts())
                        {
                             var pid = product.Id;
                             <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100 flex flex-col gap-3">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <div class="font-bold text-gray-800 text-lg">@product.ItemName</div>
                                        <span class="px-2 py-0.5 rounded text-[10px] font-bold uppercase @GetTypeBadge(product.ItemType) inline-block mt-1">
                                            @product.ItemType
                                        </span>
                                    </div>
                                    <div class="text-right">
                                        <div class="font-bold text-xl text-green-600">@product.SalePrice.ToString("C")</div>
                                        <div class="text-xs text-red-600">Exp: @GetProductExpense(product.Id).ToString("N0")</div>
                                    </div>
                                </div>
                                
                                @if(!string.IsNullOrEmpty(product.SKU)) {
                                    <div class="text-xs text-gray-400">SKU: @product.SKU</div>
                                }

                                <div class="flex gap-2 justify-end border-t pt-2 mt-1">
                                    <button @onclick="() => OpenEditForm(pid)" class="bg-blue-50 text-blue-600 px-3 py-2 rounded-lg text-sm font-bold flex-1 flex items-center justify-center gap-2">
                                        ‚úèÔ∏è Edit
                                    </button>
                                    <button @onclick="() => HandleDelete(pid)" class="bg-red-50 text-red-600 px-3 py-2 rounded-lg text-sm font-bold flex items-center justify-center gap-2">
                                        üóëÔ∏è
                                    </button>
                                </div>
                             </div>
                        }
                    </div>
                }
            </div>

            <!-- Desktop Table View -->
            <div class="hidden md:block overflow-x-auto">
                <table class="w-full min-w-[800px]">
                    <thead class="bg-gray-200">
                        <tr>
                            <th class="px-4 py-3 text-left font-semibold">Item Name</th>
                            <th class="px-4 py-3 text-left font-semibold">Type</th>
                            <th class="px-4 py-3 text-left font-semibold">SKU</th>
                            <th class="px-4 py-3 text-right font-semibold text-red-600">üí∏ Expense</th>
                            <th class="px-4 py-3 text-right font-semibold text-green-600">üí∞ Income</th>
                            <th class="px-4 py-3 text-center font-semibold">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!GetFilteredNonInventoryProducts().Any())
                        {
                            <tr>
                                <td colspan="6" class="px-4 py-8 text-center text-gray-400">
                                    No non-inventory items found.
                                </td>
                            </tr>
                        }
                        @foreach (var product in GetFilteredNonInventoryProducts())
                        {
                            var pid = product.Id;
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-4 py-3 font-semibold">@product.ItemName</td>
                                <td class="px-4 py-3">
                                    <span class="px-2 py-1 rounded text-xs font-medium @GetTypeBadge(product.ItemType)">
                                        @product.ItemType
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-gray-500">@product.SKU</td>
                                <td class="px-4 py-3 text-right text-red-600 font-semibold">Rs. @GetProductExpense(product.Id).ToString("N2")</td>
                                <td class="px-4 py-3 text-right text-green-600 font-semibold">@product.SalePrice.ToString("C")</td>
                                <td class="px-4 py-3 text-center">
                                    <button @onclick="() => OpenEditForm(pid)" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded mr-1 text-sm">
                                        ‚úèÔ∏è Edit
                                    </button>
                                    <button @onclick="() => HandleDelete(pid)" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded text-sm">
                                        üóëÔ∏è Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private List<Product> products = new();
    private List<Product> lowStockProducts = new();
    private bool showForm = false;
    private bool isEditing = false;
    private bool isSaving = false;
    private int editingId = 0;
    private int currentUserId = 1;
    private string formError = string.Empty;
    private string searchTerm = string.Empty;
    private string activeTab = "inventory";

    // Form fields (separate from model to avoid binding issues)
    private string formName = string.Empty;
    private string formType = "Inventory";
    private string formSKU = string.Empty;
    private string formDescription = string.Empty;
    private decimal formPurchasePrice = 0;
    private decimal formSalePrice = 0;
    private int formStock = 0;
    private int formReorder = 10;

    private List<Expense> allExpenses = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadProducts();
        allExpenses = await ExpenseService.GetAllAsync(currentUserId);
    }

    private async Task LoadProducts()
    {
        try
        {
            products = await ProductService.GetAllAsync(currentUserId);
            lowStockProducts = await ProductService.GetLowStockAsync(currentUserId);
            allExpenses = await ExpenseService.GetAllAsync(currentUserId);
        }
        catch (Exception ex)
        {
            System.Diagnostics.Debug.WriteLine($"LoadProducts Error: {ex.Message}");
        }
    }

    private void OpenAddForm()
    {
        isEditing = false;
        editingId = 0;
        formName = string.Empty;
        formType = "Inventory";
        formSKU = string.Empty;
        formDescription = string.Empty;
        formPurchasePrice = 0;
        formSalePrice = 0;
        formStock = 0;
        formReorder = 10;
        formError = string.Empty;
        showForm = true;
    }


    private void OpenAddNonInventoryForm()
    {
        OpenAddForm();
        formType = "Non-Inventory"; // Default to Non-Inventory
    }

    private decimal GetProductExpense(int productId)
    {
        // Sum manual expenses + purchases
        var manual = allExpenses.Where(e => e.ProductId == productId).Sum(e => e.Amount);
        return manual; 
    }

    private void OpenEditForm(int productId)
    {
        var product = products.FirstOrDefault(p => p.Id == productId);
        if (product == null) return;

        isEditing = true;
        editingId = product.Id;
        formName = product.ItemName;
        formType = product.ItemType;
        formSKU = product.SKU;
        formDescription = product.Description;
        formPurchasePrice = product.PurchasePrice;
        formSalePrice = product.SalePrice;
        formStock = product.StockQuantity;
        formReorder = product.ReorderLevel;
        formError = string.Empty;
        showForm = true;
    }

    private async Task HandleSave()
    {
        formError = string.Empty;

        if (string.IsNullOrWhiteSpace(formName))
        {
            formError = "Item name is required!";
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            if (isEditing)
            {
                var product = new Product
                {
                    Id = editingId,
                    ItemName = formName.Trim(),
                    ItemType = formType,
                    SKU = formSKU,
                    Description = formDescription,
                    PurchasePrice = formPurchasePrice,
                    SalePrice = formSalePrice,
                    StockQuantity = formStock,
                    ReorderLevel = formReorder,
                    UserId = currentUserId
                };
                await ProductService.UpdateAsync(product);
            }
            else
            {
                var product = new Product
                {
                    ItemName = formName.Trim(),
                    ItemType = formType,
                    SKU = formSKU,
                    Description = formDescription,
                    PurchasePrice = formPurchasePrice,
                    SalePrice = formSalePrice,
                    StockQuantity = formStock,
                    ReorderLevel = formReorder,
                    UserId = currentUserId
                };
                await ProductService.AddAsync(product);
            }

            await LoadProducts();
            showForm = false;
        }
        catch (Exception ex)
        {
            formError = $"Error saving: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private async Task HandleDelete(int productId)
    {
        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this item?");
            if (!confirmed) return;

            await ProductService.DeleteAsync(productId);
            await LoadProducts();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Cannot delete: This item may be used in purchases. {ex.Message}");
        }
    }

    private void CloseForm()
    {
        showForm = false;
        formError = string.Empty;
    }

    private IEnumerable<Product> GetFilteredProducts()
    {
        if (string.IsNullOrWhiteSpace(searchTerm)) return products;
        return products.Where(p => 
            (p.ItemName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
            (p.SKU?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
            (p.ItemType?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
        );
    }

    private IEnumerable<Product> GetFilteredInventoryProducts()
    {
        var inventoryItems = products.Where(p => p.ItemType == "Inventory");
        if (string.IsNullOrWhiteSpace(searchTerm)) return inventoryItems;
        return inventoryItems.Where(p => 
            (p.ItemName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
            (p.SKU?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
        );
    }

    private IEnumerable<Product> GetFilteredNonInventoryProducts()
    {
        var nonInventoryItems = products.Where(p => p.ItemType != "Inventory");
        if (string.IsNullOrWhiteSpace(searchTerm)) return nonInventoryItems;
        return nonInventoryItems.Where(p => 
            (p.ItemName?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
            (p.SKU?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
            (p.ItemType?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false)
        );
    }

    private string GetTypeBadge(string type) => type switch
    {

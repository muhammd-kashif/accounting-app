@page "/bills"
@rendermode InteractiveServer
@using AccountingApp.Services
@using AccountingApp.Models
@inject IBillService BillService
@inject ISupplierService SupplierService
@inject IProductService ProductService
@inject IJSRuntime JSRuntime

<div class="p-4 md:p-8 bg-gray-100 min-h-screen">
    <div class="mb-6 md:mb-8 flex flex-col md:flex-row md:justify-between md:items-center gap-4">
        <h1 class="text-4xl font-bold text-gray-800">üìÑ Bills</h1>
        <button @onclick="ShowAddForm" class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-6 rounded-lg w-full md:w-auto">
            ‚ûï New Bill
        </button>
    </div>

    <!-- Summary Cards -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">Total Bills</p>
            <p class="text-2xl font-bold text-indigo-600">@bills.Count</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">Total Amount</p>
            <p class="text-2xl font-bold text-blue-600">@bills.Sum(b => b.TotalAmount).ToString("C")</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">Paid</p>
            <p class="text-2xl font-bold text-green-600">@bills.Sum(b => b.PaidAmount).ToString("C")</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4 text-center">
            <p class="text-sm text-gray-500">Outstanding</p>
            <p class="text-2xl font-bold text-red-600">@bills.Sum(b => b.TotalAmount - b.PaidAmount).ToString("C")</p>
        </div>
    </div>

    <!-- Add Bill Modal -->
    @if (showForm)
    {
        <div class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
            <div class="bg-white rounded-lg shadow-xl w-full max-w-2xl p-6 max-h-[90vh] overflow-y-auto">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-2xl font-semibold">New Bill</h2>
                    <button @onclick="CancelForm" class="text-gray-500 hover:text-gray-700 text-xl">‚úñ</button>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Vendor *</label>
                        <select @bind="newBill.SupplierId" class="w-full px-4 py-2 border rounded-lg">
                            <option value="0">-- Select Vendor --</option>
                            @foreach (var s in suppliers)
                            {
                                <option value="@s.Id">@s.SupplierName</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Bill Date</label>
                        <input type="date" @bind="billDate" class="w-full px-4 py-2 border rounded-lg">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Due Date</label>
                        <input type="date" @bind="dueDate" class="w-full px-4 py-2 border rounded-lg">
                    </div>
                </div>

                <!-- Items Section -->
                <div class="border rounded-lg p-4 mb-4">
                    <h3 class="font-semibold text-lg mb-3">üìã Items</h3>
                    
                    @for (int i = 0; i < billItems.Count; i++)
                    {
                        var index = i;
                        <div class="grid grid-cols-12 gap-2 mb-2 items-end">
                            <div class="col-span-5">
                                @if (index == 0)
                                {
                                    <label class="block text-xs text-gray-500 mb-1">Item</label>
                                }
                                <select @bind="billItems[index].ProductId" @bind:after="() => OnBillProductSelected(index)" class="w-full px-3 py-2 border rounded text-sm">
                                    <option value="0">-- Select Item --</option>
                                    @foreach (var p in allProducts)
                                    {
                                        <option value="@p.Id">@p.ItemName</option>
                                    }
                                </select>
                            </div>
                            <div class="col-span-2">
                                @if (index == 0)
                                {
                                    <label class="block text-xs text-gray-500 mb-1">Qty</label>
                                }
                                <input type="number" @bind="billItems[index].Quantity" @bind:after="() => CalculateBillLineTotal(index)" min="1" class="w-full px-3 py-2 border rounded text-sm">
                            </div>
                            <div class="col-span-2">
                                @if (index == 0)
                                {
                                    <label class="block text-xs text-gray-500 mb-1">Rate</label>
                                }
                                <input type="number" step="0.01" @bind="billItems[index].Rate" @bind:after="() => CalculateBillLineTotal(index)" class="w-full px-3 py-2 border rounded text-sm">
                            </div>
                            <div class="col-span-2">
                                @if (index == 0)
                                {
                                    <label class="block text-xs text-gray-500 mb-1">Amount</label>
                                }
                                <input type="text" value="@billItems[index].Amount.ToString("N2")" readonly class="w-full px-3 py-2 border rounded text-sm bg-gray-50">
                            </div>
                            <div class="col-span-1">
                                <button @onclick="() => RemoveBillItem(index)" class="text-red-500 hover:text-red-700 text-lg">‚úñ</button>
                            </div>
                        </div>
                    }

                    <button @onclick="AddBillItem" class="mt-2 text-indigo-600 hover:text-indigo-800 font-medium text-sm">
                        + Add Item
                    </button>
                </div>

                <!-- Total -->
                <div class="flex justify-end mb-4">
                    <div class="bg-gray-50 px-6 py-3 rounded-lg">
                        <span class="text-lg font-semibold">Total: </span>
                        <span class="text-2xl font-bold text-green-600">@billItems.Sum(i => i.Amount).ToString("C")</span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-1">Notes</label>
                    <textarea @bind="newBill.Notes" rows="2" class="w-full px-4 py-2 border rounded-lg" placeholder="Any notes..."></textarea>
                </div>

                <div class="flex justify-end gap-3">
                    <button @onclick="CancelForm" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-6 rounded-lg">
                        Cancel
                    </button>
                    <button @onclick="SaveBill" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-6 rounded-lg">
                        Save Bill
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Bills Table -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full min-w-[900px]">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="px-4 py-3 text-left font-semibold">Bill #</th>
                        <th class="px-4 py-3 text-left font-semibold">Vendor</th>
                        <th class="px-4 py-3 text-left font-semibold">Bill Date</th>
                        <th class="px-4 py-3 text-left font-semibold">Due Date</th>
                        <th class="px-4 py-3 text-right font-semibold">Total</th>
                        <th class="px-4 py-3 text-right font-semibold">Paid</th>
                        <th class="px-4 py-3 text-right font-semibold">Balance</th>
                        <th class="px-4 py-3 text-center font-semibold">Status</th>
                        <th class="px-4 py-3 text-left font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bill in bills)
                    {
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-4 py-3 font-mono font-semibold text-indigo-600">@bill.BillNumber</td>
                            <td class="px-4 py-3 font-semibold">@bill.Supplier?.SupplierName</td>
                            <td class="px-4 py-3">@bill.BillDate.ToString("dd MMM yyyy")</td>
                            <td class="px-4 py-3 @(bill.DueDate < DateTime.Today && bill.Status != "Paid" ? "text-red-600 font-bold" : "")">
                                @bill.DueDate.ToString("dd MMM yyyy")
                                @if (bill.DueDate < DateTime.Today && bill.Status != "Paid")
                                {
                                    <span class="text-xs ml-1">‚ö†Ô∏è Overdue</span>
                                }
                            </td>
                            <td class="px-4 py-3 text-right font-semibold">@bill.TotalAmount.ToString("C")</td>
                            <td class="px-4 py-3 text-right text-green-600">@bill.PaidAmount.ToString("C")</td>
                            <td class="px-4 py-3 text-right font-bold text-red-600">@((bill.TotalAmount - bill.PaidAmount).ToString("C"))</td>
                            <td class="px-4 py-3 text-center">
                                <span class="px-2 py-1 rounded text-xs font-medium @GetStatusBadge(bill.Status)">
                                    @bill.Status
                                </span>
                            </td>
                            <td class="px-4 py-3">
                                <button @onclick="() => DeleteBill(bill.Id)" class="bg-red-500 text-white px-3 py-1 rounded text-sm">üóëÔ∏è</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private List<Bill> bills = new();
    private List<Supplier> suppliers = new();
    private List<Product> allProducts = new();
    private Bill newBill = new();
    private List<BillItem> billItems = new();
    private DateTime billDate = DateTime.Today;
    private DateTime dueDate = DateTime.Today.AddDays(30);
    private bool showForm = false;
    private int currentUserId = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        bills = await BillService.GetAllAsync(currentUserId);
        suppliers = await SupplierService.GetAllAsync(currentUserId);
        allProducts = await ProductService.GetAllAsync(currentUserId);
    }

    private void ShowAddForm()
    {
        newBill = new Bill { UserId = currentUserId };
        billItems = new List<BillItem> { new BillItem() };
        billDate = DateTime.Today;
        dueDate = DateTime.Today.AddDays(30);
        showForm = true;
    }

    private void AddBillItem()
    {
        billItems.Add(new BillItem());
    }

    private void RemoveBillItem(int index)
    {
        if (billItems.Count > 1)
        {
            billItems.RemoveAt(index);
        }
    }

    private void OnBillProductSelected(int index)
    {
        var product = allProducts.FirstOrDefault(p => p.Id == billItems[index].ProductId);
        if (product != null)
        {
            billItems[index].Rate = product.PurchasePrice;
            if (billItems[index].Quantity == 0)
                billItems[index].Quantity = 1;
            CalculateBillLineTotal(index);
        }
    }

    private void CalculateBillLineTotal(int index)
    {
        billItems[index].Amount = billItems[index].Quantity * billItems[index].Rate;
    }

    private async Task SaveBill()
    {
        if (newBill.SupplierId == 0)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please select a vendor!");
            return;
        }

        var validItems = billItems.Where(i => i.ProductId > 0 && i.Quantity > 0).ToList();
        if (!validItems.Any())
        {
            await JSRuntime.InvokeVoidAsync("alert", "Please add at least one item!");
            return;
        }

        newBill.BillDate = billDate;
        newBill.DueDate = dueDate;
        newBill.Items = validItems;
        newBill.TotalAmount = validItems.Sum(i => i.Amount);

        await BillService.AddAsync(newBill);
        await LoadData();
        CancelForm();
    }

    private async Task DeleteBill(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Delete this bill? Stock will be reversed."))
        {
            await BillService.DeleteAsync(id);
            await LoadData();
        }
    }

    private void CancelForm()
    {
        showForm = false;
        newBill = new();
        billItems = new();
    }

    private string GetStatusBadge(string status) => status switch
    {
        "Paid" => "bg-green-100 text-green-800",
        "Partial" => "bg-yellow-100 text-yellow-800",
        "Unpaid" => "bg-red-100 text-red-800",
        _ => "bg-gray-100 text-gray-800"
    };
}

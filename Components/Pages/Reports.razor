@page "/reports"
@rendermode InteractiveServer
@using AccountingApp.Services
@using AccountingApp.Models
@using System.Linq
@inject IReportService ReportService
@inject IIncomeService IncomeService
@inject IExpenseService ExpenseService

<div class="p-4 md:p-8 bg-gray-100 min-h-screen">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-6 md:mb-8 text-center md:text-left">üìà Reports</h1>

    <!-- Report Selection -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <button @onclick='() => ShowReport("pnl")' 
                class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 md:py-4 px-6 rounded-xl text-base md:text-lg w-full transition shadow-md hover:shadow-lg flex items-center justify-center gap-2">
            <span>üíπ</span> Profit & Loss
        </button>
        <button @onclick='() => ShowReport("income")' 
                class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 md:py-4 px-6 rounded-xl text-base md:text-lg w-full transition shadow-md hover:shadow-lg flex items-center justify-center gap-2">
            <span>üí∞</span> Income Report
        </button>
        <button @onclick='() => ShowReport("expense")' 
                class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 md:py-4 px-6 rounded-xl text-base md:text-lg w-full transition shadow-md hover:shadow-lg flex items-center justify-center gap-2">
            <span>üí∏</span> Expense Report
        </button>
    </div>

    @if (currentReport == "pnl")
    {
        <div class="bg-white rounded-2xl shadow-lg p-4 md:p-8 animate-in fade-in duration-500">
            <h2 class="text-2xl md:text-3xl font-bold mb-6 text-gray-800 text-center md:text-left">üìä Profit & Loss Overview</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6 mb-8">
                <div class="bg-green-50 border-2 border-green-100 rounded-2xl p-4 md:p-6 transition hover:border-green-300">
                    <p class="text-gray-500 text-xs md:text-sm font-semibold uppercase tracking-wider mb-1">Total Income</p>
                    <p class="text-2xl md:text-3xl lg:text-4xl font-bold text-green-600">@totalIncome.ToString("C")</p>
                </div>
                
                <div class="bg-red-50 border-2 border-red-100 rounded-2xl p-4 md:p-6 transition hover:border-red-300">
                    <p class="text-gray-500 text-xs md:text-sm font-semibold uppercase tracking-wider mb-1">Total Expense</p>
                    <p class="text-2xl md:text-3xl lg:text-4xl font-bold text-red-600">@totalExpense.ToString("C")</p>
                </div>
                
                <div class="@(profitLoss >= 0 ? "bg-blue-50 border-blue-100 hover:border-blue-300" : "bg-orange-50 border-orange-100 hover:border-orange-300") border-2 rounded-2xl p-4 md:p-6 transition">
                    <p class="text-gray-500 text-xs md:text-sm font-semibold uppercase tracking-wider mb-1">Net Position</p>
                    <p class="text-2xl md:text-3xl lg:text-4xl font-bold @(profitLoss >= 0 ? "text-blue-600" : "text-orange-600")">@profitLoss.ToString("C")</p>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-6">
                <!-- Visual Breakdown -->
                <div class="bg-gray-50 border border-gray-100 rounded-2xl p-5 md:p-6">
                    <h3 class="text-lg font-bold mb-5 text-gray-800 border-b pb-2">üìà Performance Bar</h3>
                    <div class="space-y-5">
                        <div class="group">
                            <div class="flex justify-between text-xs md:text-sm mb-1">
                                <span class="text-gray-600 font-medium">Income</span>
                                <span class="font-bold text-green-600">@totalIncome.ToString("C")</span>
                            </div>
                            <div class="h-3 bg-gray-200 rounded-full overflow-hidden">
                                <div class="h-full bg-green-500 transition-all duration-1000" style="width: @GetBarPercent(totalIncome);"></div>
                            </div>
                        </div>
                        <div class="group">
                            <div class="flex justify-between text-xs md:text-sm mb-1">
                                <span class="text-gray-600 font-medium">Expense</span>
                                <span class="font-bold text-red-600">@totalExpense.ToString("C")</span>
                            </div>
                            <div class="h-3 bg-gray-200 rounded-full overflow-hidden">
                                <div class="h-full bg-red-500 transition-all duration-1000" style="width: @GetBarPercent(totalExpense);"></div>
                            </div>
                        </div>
                        <div class="group pt-2 border-t border-gray-200 mt-2">
                            <div class="flex justify-between text-xs md:text-sm mb-1">
                                <span class="text-gray-600 font-bold uppercase tracking-tighter">Net Profit/Loss</span>
                                <span class="font-bold @(profitLoss >= 0 ? "text-blue-600" : "text-orange-600")">@profitLoss.ToString("C")</span>
                            </div>
                            <div class="h-4 bg-gray-200 rounded-full overflow-hidden border border-white">
                                <div class="h-full @(profitLoss >= 0 ? "bg-blue-500" : "bg-orange-500") transition-all duration-1000 shadow-inner" style="width: @GetBarPercent(Math.Abs(profitLoss));"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pie Share -->
                <div class="bg-gray-50 border border-gray-100 rounded-2xl p-6 flex flex-col items-center justify-center">
                    <h3 class="text-lg font-bold mb-5 text-gray-800 w-full border-b pb-2">ü•ß Income vs Expense Share</h3>
                    <div class="relative w-44 h-44 md:w-48 md:h-48 rounded-full shadow-inner" style="background: conic-gradient(#22c55e 0% @GetPiePercent(totalIncome)%, #ef4444 @GetPiePercent(totalIncome)% 100%);">
                        <div class="absolute inset-4 bg-white rounded-full flex items-center justify-center shadow-md">
                            <div class="text-center">
                                <div class="text-[10px] text-gray-400 font-bold uppercase">Income</div>
                                <div class="text-sm md:text-base font-black text-green-600">@GetPiePercent(totalIncome)%</div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-6 w-full space-y-2">
                        <div class="flex justify-between text-sm items-center p-2 rounded-lg bg-green-100/30">
                            <div class="flex items-center gap-2"><div class="w-3 h-3 rounded-full bg-green-500 shadow-sm"></div><span class="text-gray-700 font-semibold">Income</span></div>
                            <span class="font-bold text-green-700">@totalIncome.ToString("C")</span>
                        </div>
                        <div class="flex justify-between text-sm items-center p-2 rounded-lg bg-red-100/30">
                            <div class="flex items-center gap-2"><div class="w-3 h-3 rounded-full bg-red-500 shadow-sm"></div><span class="text-gray-700 font-semibold">Expense</span></div>
                            <span class="font-bold text-red-700">@totalExpense.ToString("C")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center text-gray-400 text-[10px] font-bold uppercase tracking-widest mt-4">
                Generated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")
            </div>
        </div>
    }

    @if (currentReport == "income")
    {
        <div class="bg-white rounded-2xl shadow-lg p-4 md:p-8 animate-in slide-in-from-bottom duration-500">
            <h2 class="text-2xl md:text-3xl font-bold mb-6 text-gray-800 flex items-center gap-3">
                <span class="bg-green-100 p-2 rounded-lg text-green-600">üí∞</span> Income Analysis
            </h2>
            
            <div class="mb-8 flex flex-col md:flex-row md:items-center gap-3 bg-gray-50 p-4 rounded-xl border border-gray-100">
                <label class="block text-gray-700 font-bold text-sm md:text-base">üìÖ Select Target Date:</label>
                <input type="date" @bind="selectedDate" class="px-4 py-2 border border-gray-300 rounded-lg w-full md:w-auto focus:ring-2 focus:ring-green-500 focus:outline-none transition-all shadow-sm">
                <button @onclick="LoadDailyIncomeReport" class="bg-green-600 hover:bg-green-700 text-white font-bold px-6 py-2 rounded-lg w-full md:w-auto transition-transform active:scale-95 shadow-md flex items-center justify-center gap-2">
                    üîç Filter Records
                </button>
            </div>

            <!-- Mobile List View -->
            <div class="block md:hidden space-y-4 mb-6">
                @if (!dailyIncomes.Any())
                {
                    <div class="text-center py-12 bg-gray-50 rounded-xl text-gray-400 font-medium italic">No income entries found for this date.</div>
                }
                @foreach (var income in dailyIncomes)
                {
                    <div class="bg-green-50/50 p-4 rounded-xl border border-green-100 flex justify-between items-center shadow-sm">
                        <div>
                            <div class="font-black text-gray-800">@income.Customer?.Name</div>
                            <div class="text-[10px] text-gray-400 font-bold uppercase mt-1">@income.PaymentType</div>
                        </div>
                        <div class="text-right">
                            <div class="font-black text-green-600 text-lg">@income.Amount.ToString("C")</div>
                        </div>
                    </div>
                }
            </div>

            <!-- Desktop View -->
            <div class="hidden md:block overflow-x-auto rounded-xl border border-gray-200">
                <table class="w-full min-w-[700px] border-collapse">
                <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-widest">Date</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-widest">Customer</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-widest">Amount</th>
                        <th class="px-6 py-4 text-left text-xs font-bold text-gray-500 uppercase tracking-widest">Payment Type</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 bg-white">
                    @foreach (var income in dailyIncomes)
                    {
                        <tr class="hover:bg-green-50/30 transition-colors">
                            <td class="px-6 py-4 text-sm text-gray-600 font-medium">@income.Date?.ToString("yyyy-MM-dd")</td>
                            <td class="px-6 py-4 text-sm font-bold text-gray-800">@income.Customer?.Name</td>
                            <td class="px-6 py-4 text-sm font-black text-green-600">@income.Amount.ToString("C")</td>
                            <td class="px-6 py-4 text-sm"><span class="px-3 py-1 bg-gray-100 rounded-full text-[10px] font-bold text-gray-600 uppercase">@income.PaymentType</span></td>
                        </tr>
                    }
                </tbody>
                </table>
            </div>
            
            <div class="mt-8 flex justify-center md:justify-end">
                <div class="bg-green-600 text-white px-8 py-4 rounded-2xl shadow-lg transform -rotate-1 hover:rotate-0 transition-transform">
                    <p class="text-[10px] font-black uppercase tracking-widest opacity-80 mb-1 text-center">Grand Total for the Day</p>
                    <p class="text-2xl md:text-3xl font-black text-center">@dailyIncomes.Sum(i => i.Amount).ToString("C")</p>
                </div>
            </div>
        </div>
    }

    <!-- Expense Report -->
    @if (currentReport == "expense")
    {
        <div class="bg-white rounded-2xl shadow-lg p-4 md:p-8 animate-in zoom-in duration-500">
            <h2 class="text-2xl md:text-3xl font-bold mb-8 text-gray-800 flex items-center gap-3">
                <span class="bg-red-100 p-2 rounded-lg text-red-600">üí∏</span> Expense Distribution
            </h2>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 md:gap-6 mb-10">
                @foreach (var exp in expenseByCategory)
                {
                    <div class="bg-white border-2 border-red-50 rounded-2xl p-4 md:p-5 shadow-sm hover:shadow-md transition-shadow group">
                        <div class="flex items-center gap-3 mb-2">
                             <div class="w-2 h-2 rounded-full" style="background-color: @GetCategoryColor(exp.Key);"></div>
                             <p class="text-gray-500 font-bold text-xs uppercase tracking-wider">@exp.Key</p>
                        </div>
                        <p class="text-2xl font-black text-red-600 group-hover:scale-105 transition-transform text-right md:text-left">@exp.Value.ToString("C")</p>
                    </div>
                }
            </div>

            @if (expenseByCategory.Count > 0)
            {
                <div class="bg-gray-50 border border-gray-100 rounded-2xl p-6 md:p-8">
                    <h3 class="text-lg font-black mb-6 text-gray-700 uppercase tracking-widest text-center md:text-left">üìä Category Intensity</h3>
                    <div class="h-6 bg-gray-200 rounded-xl overflow-hidden flex shadow-inner border-2 border-white">
                        @foreach (var exp in expenseByCategory)
                        {
                            <div class="h-full first:rounded-l-lg last:rounded-r-lg" style="width: @GetExpenseCategoryPercent(exp.Value); background-color: @GetCategoryColor(exp.Key);" title="@exp.Key: @exp.Value.ToString("C")"></div>
                        }
                    </div>
                    <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
                        @foreach (var exp in expenseByCategory)
                        {
                            <div class="flex justify-between items-center bg-white p-3 rounded-xl border border-gray-100 hover:bg-red-50/50 transition-colors">
                                <span class="flex items-center gap-2">
                                    <span class="inline-block w-4 h-4 rounded-md shadow-sm" style="background-color: @GetCategoryColor(exp.Key);"></span>
                                    <span class="text-xs font-bold text-gray-600">@exp.Key</span>
                                </span>
                                <div class="text-right">
                                    <span class="font-black text-red-600 text-sm">@exp.Value.ToString("C")</span>
                                    <div class="text-[8px] text-gray-400 font-black uppercase">@GetExpenseCategoryPercent(exp.Value) of Total</div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-20 bg-gray-50 rounded-2xl border-2 border-dashed border-gray-100">
                    <div class="text-5xl mb-4">üåµ</div>
                    <p class="text-gray-400 font-bold uppercase tracking-widest">No expenses tracked yet.</p>
                </div>
            }
        </div>
    }
</div>

@code {
    private string currentReport = "pnl";
    private decimal totalIncome = 0;
    private decimal totalExpense = 0;
    private decimal profitLoss = 0;
    private DateTime selectedDate = DateTime.Now;
    private List<Income> dailyIncomes = new();
    private Dictionary<string, decimal> expenseByCategory = new();
    private int currentUserId = 1;
    private decimal maxPnlValue = 0;
    private decimal totalInOut = 0;
    private decimal totalExpenseByCategory = 0;

    private async Task ShowReport(string reportType)
    {
        currentReport = reportType;
        if (reportType == "pnl")
        {
            await LoadProfitLossData();
        }
        else if (reportType == "income")
        {
            await LoadDailyIncomeReport();
        }
        else if (reportType == "expense")
        {
            await LoadExpenseReport();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadProfitLossData();
        await LoadDailyIncomeReport();
        await LoadExpenseReport();
    }

    private async Task LoadProfitLossData()
    {
        totalIncome = await IncomeService.GetTotalIncomeAsync(currentUserId);
        totalExpense = await ExpenseService.GetTotalExpenseAsync(currentUserId);
        profitLoss = await ReportService.GetProfitLossAsync(currentUserId);
        maxPnlValue = new[] { totalIncome, totalExpense, Math.Abs(profitLoss) }.Max();
        totalInOut = totalIncome + totalExpense;
    }

    private async Task LoadDailyIncomeReport()
    {
        dailyIncomes = await ReportService.GetDailyIncomeReportAsync(currentUserId, selectedDate);
    }

    private async Task LoadExpenseReport()
    {
        expenseByCategory = await ExpenseService.GetExpenseByCategory(currentUserId);
        totalExpenseByCategory = expenseByCategory.Sum(x => x.Value);
    }

    private string GetBarPercent(decimal value)
    {
        if (maxPnlValue <= 0)
        {
            return "0%";
        }

        var percent = (value / maxPnlValue) * 100m;
        return $"{Math.Min(100m, Math.Max(0m, percent)):0.#}%";
    }

    private string GetPiePercent(decimal value)
    {
        if (totalInOut <= 0)
        {
            return "0";
        }

        var percent = (value / totalInOut) * 100m;
        return $"{Math.Min(100m, Math.Max(0m, percent)):0.#}";
    }

    private string GetExpenseCategoryPercent(decimal value)
    {
        if (totalExpenseByCategory <= 0)
        {
            return "0%";
        }

        var percent = (value / totalExpenseByCategory) * 100m;
        return $"{Math.Min(100m, Math.Max(0m, percent)):0.#}%";
    }

    private string GetCategoryColor(string key)
    {
        return key switch
        {
            "Rent" => "#ef4444",
            "Salary" => "#f97316",
            "Bills" => "#f59e0b",
            "Utilities" => "#eab308",
            "Transport" => "#22c55e",
            _ => "#6366f1"
        };
    }
}

@page "/reports"
@rendermode InteractiveServer
@using AccountingApp.Services
@using AccountingApp.Models
@using System.Linq
@inject IReportService ReportService
@inject IIncomeService IncomeService
@inject IExpenseService ExpenseService

<div class="p-4 md:p-8 bg-gray-100 min-h-screen">
    <h1 class="text-4xl font-bold text-gray-800 mb-8">üìà Reports</h1>

    <!-- Report Selection -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <button @onclick='() => ShowReport("pnl")' 
                class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-4 px-6 rounded-lg text-lg w-full">
            üíπ Profit & Loss
        </button>
        <button @onclick='() => ShowReport("income")' 
                class="bg-green-500 hover:bg-green-600 text-white font-bold py-4 px-6 rounded-lg text-lg w-full">
            üí∞ Income Report
        </button>
        <button @onclick='() => ShowReport("expense")' 
                class="bg-red-500 hover:bg-red-600 text-white font-bold py-4 px-6 rounded-lg text-lg w-full">
            üí∏ Expense Report
        </button>
    </div>

    <!-- Profit & Loss Report -->
    @if (currentReport == "pnl")
    {
        <div class="bg-white rounded-lg shadow-md p-8">
            <h2 class="text-3xl font-bold mb-6">üìä Profit & Loss Report</h2>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <div class="bg-green-50 border-2 border-green-200 rounded-lg p-6">
                    <p class="text-gray-600 text-sm">üí∞ Total Income</p>
                    <p class="text-4xl font-bold text-green-600">@totalIncome.ToString("C")</p>
                </div>
                
                <div class="bg-red-50 border-2 border-red-200 rounded-lg p-6">
                    <p class="text-gray-600 text-sm">üí∏ Total Expense</p>
                    <p class="text-4xl font-bold text-red-600">@totalExpense.ToString("C")</p>
                </div>
                
                <div class="@(profitLoss >= 0 ? "bg-blue-50 border-2 border-blue-200" : "bg-orange-50 border-2 border-orange-200") rounded-lg p-6">
                    <p class="text-gray-600 text-sm">üìà Net Profit/Loss</p>
                    <p class="text-4xl font-bold @(profitLoss >= 0 ? "text-blue-600" : "text-orange-600")">@profitLoss.ToString("C")</p>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
                <div class="bg-gray-50 border rounded-lg p-4">
                    <h3 class="text-lg font-semibold mb-3 text-gray-800">üìà Income vs Expense</h3>
                    <div class="space-y-3">
                        <div>
                            <div class="flex justify-between text-sm text-gray-600 mb-1">
                                <span>Income</span>
                                <span class="font-semibold text-green-600">@totalIncome.ToString("C")</span>
                            </div>
                            <div class="h-3 bg-gray-200 rounded-full overflow-hidden">
                                <div class="h-full bg-green-500" style="width: @GetBarPercent(totalIncome);"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between text-sm text-gray-600 mb-1">
                                <span>Expense</span>
                                <span class="font-semibold text-red-600">@totalExpense.ToString("C")</span>
                            </div>
                            <div class="h-3 bg-gray-200 rounded-full overflow-hidden">
                                <div class="h-full bg-red-500" style="width: @GetBarPercent(totalExpense);"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between text-sm text-gray-600 mb-1">
                                <span>Net</span>
                                <span class="font-semibold @(profitLoss >= 0 ? "text-blue-600" : "text-orange-600")">@profitLoss.ToString("C")</span>
                            </div>
                            <div class="h-3 bg-gray-200 rounded-full overflow-hidden">
                                <div class="h-full @(profitLoss >= 0 ? "bg-blue-500" : "bg-orange-500")" style="width: @GetBarPercent(Math.Abs(profitLoss));"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="bg-gray-50 border rounded-lg p-4 flex flex-col items-center">
                    <h3 class="text-lg font-semibold mb-3 text-gray-800">ü•ß Share</h3>
                    <div class="w-40 h-40 rounded-full" style="background: conic-gradient(#22c55e 0% @GetPiePercent(totalIncome)%, #ef4444 @GetPiePercent(totalIncome)% 100%);">
                    </div>
                    <div class="mt-4 w-full text-sm text-gray-600">
                        <div class="flex justify-between">
                            <span class="flex items-center gap-2"><span class="inline-block w-3 h-3 rounded-full bg-green-500"></span>Income</span>
                            <span class="font-semibold text-green-600">@totalIncome.ToString("C")</span>
                        </div>
                        <div class="flex justify-between mt-2">
                            <span class="flex items-center gap-2"><span class="inline-block w-3 h-3 rounded-full bg-red-500"></span>Expense</span>
                            <span class="font-semibold text-red-600">@totalExpense.ToString("C")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center text-gray-500 text-sm">
                Report Generated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")
            </div>
        </div>
    }

    <!-- Income Report -->
    @if (currentReport == "income")
    {
        <div class="bg-white rounded-lg shadow-md p-8">
            <h2 class="text-3xl font-bold mb-6">üí∞ Income Report</h2>
            
            <div class="mb-6 flex flex-col md:flex-row md:items-center gap-2">
                <label class="block text-gray-700 font-semibold">Select Date:</label>
                <input type="date" @bind="selectedDate" class="px-4 py-2 border rounded-lg w-full md:w-auto">
                <button @onclick="LoadDailyIncomeReport" class="bg-blue-500 text-white px-4 py-2 rounded-lg w-full md:w-auto">üîç Search</button>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full min-w-[700px] border-collapse">
                <thead class="bg-gray-200">
                    <tr>
                        <th class="border px-4 py-2 text-left">Date</th>
                        <th class="border px-4 py-2 text-left">Customer</th>
                        <th class="border px-4 py-2 text-left">Amount</th>
                        <th class="border px-4 py-2 text-left">Payment Type</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var income in dailyIncomes)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="border px-4 py-2">@income.Date?.ToString("yyyy-MM-dd")</td>
                            <td class="border px-4 py-2">@income.Customer?.Name</td>
                            <td class="border px-4 py-2 font-semibold text-green-600">@income.Amount.ToString("C")</td>
                            <td class="border px-4 py-2">@income.PaymentType</td>
                        </tr>
                    }
                </tbody>
                </table>
            </div>
            
            <div class="mt-4 text-lg font-bold">
                Daily Total: <span class="text-green-600">@dailyIncomes.Sum(i => i.Amount).ToString("C")</span>
            </div>
        </div>
    }

    <!-- Expense Report -->
    @if (currentReport == "expense")
    {
        <div class="bg-white rounded-lg shadow-md p-8">
            <h2 class="text-3xl font-bold mb-6">üí∏ Expense Report</h2>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mb-8">
                @foreach (var exp in expenseByCategory)
                {
                    <div class="bg-red-50 border-2 border-red-200 rounded-lg p-4">
                        <p class="text-gray-600 font-semibold">@exp.Key</p>
                        <p class="text-2xl font-bold text-red-600">@exp.Value.ToString("C")</p>
                    </div>
                }
            </div>

            @if (expenseByCategory.Count > 0)
            {
                <div class="bg-gray-50 border rounded-lg p-4">
                    <h3 class="text-lg font-semibold mb-3 text-gray-800">üìä Category Share</h3>
                    <div class="h-3 bg-gray-200 rounded-full overflow-hidden flex">
                        @foreach (var exp in expenseByCategory)
                        {
                            <div class="h-full" style="width: @GetExpenseCategoryPercent(exp.Value); background-color: @GetCategoryColor(exp.Key);"></div>
                        }
                    </div>
                    <div class="mt-3 grid grid-cols-1 md:grid-cols-2 gap-2 text-sm text-gray-600">
                        @foreach (var exp in expenseByCategory)
                        {
                            <div class="flex justify-between">
                                <span class="flex items-center gap-2">
                                    <span class="inline-block w-3 h-3 rounded-full" style="background-color: @GetCategoryColor(exp.Key);"></span>
                                    @exp.Key
                                </span>
                                <span class="font-semibold text-red-600">@exp.Value.ToString("C")</span>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private string currentReport = "pnl";
    private decimal totalIncome = 0;
    private decimal totalExpense = 0;
    private decimal profitLoss = 0;
    private DateTime selectedDate = DateTime.Now;
    private List<Income> dailyIncomes = new();
    private Dictionary<string, decimal> expenseByCategory = new();
    private int currentUserId = 1;
    private decimal maxPnlValue = 0;
    private decimal totalInOut = 0;
    private decimal totalExpenseByCategory = 0;

    private async Task ShowReport(string reportType)
    {
        currentReport = reportType;
        if (reportType == "pnl")
        {
            await LoadProfitLossData();
        }
        else if (reportType == "income")
        {
            await LoadDailyIncomeReport();
        }
        else if (reportType == "expense")
        {
            await LoadExpenseReport();
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadProfitLossData();
        await LoadDailyIncomeReport();
        await LoadExpenseReport();
    }

    private async Task LoadProfitLossData()
    {
        totalIncome = await IncomeService.GetTotalIncomeAsync(currentUserId);
        totalExpense = await ExpenseService.GetTotalExpenseAsync(currentUserId);
        profitLoss = await ReportService.GetProfitLossAsync(currentUserId);
        maxPnlValue = new[] { totalIncome, totalExpense, Math.Abs(profitLoss) }.Max();
        totalInOut = totalIncome + totalExpense;
    }

    private async Task LoadDailyIncomeReport()
    {
        dailyIncomes = await ReportService.GetDailyIncomeReportAsync(currentUserId, selectedDate);
    }

    private async Task LoadExpenseReport()
    {
        expenseByCategory = await ExpenseService.GetExpenseByCategory(currentUserId);
        totalExpenseByCategory = expenseByCategory.Sum(x => x.Value);
    }

    private string GetBarPercent(decimal value)
    {
        if (maxPnlValue <= 0)
        {
            return "0%";
        }

        var percent = (value / maxPnlValue) * 100m;
        return $"{Math.Min(100m, Math.Max(0m, percent)):0.#}%";
    }

    private string GetPiePercent(decimal value)
    {
        if (totalInOut <= 0)
        {
            return "0";
        }

        var percent = (value / totalInOut) * 100m;
        return $"{Math.Min(100m, Math.Max(0m, percent)):0.#}";
    }

    private string GetExpenseCategoryPercent(decimal value)
    {
        if (totalExpenseByCategory <= 0)
        {
            return "0%";
        }

        var percent = (value / totalExpenseByCategory) * 100m;
        return $"{Math.Min(100m, Math.Max(0m, percent)):0.#}%";
    }

    private string GetCategoryColor(string key)
    {
        return key switch
        {
            "Rent" => "#ef4444",
            "Salary" => "#f97316",
            "Bills" => "#f59e0b",
            "Utilities" => "#eab308",
            "Transport" => "#22c55e",
            _ => "#6366f1"
        };
    }
}

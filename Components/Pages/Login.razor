@page "/login"
@rendermode InteractiveServer
@using AccountingApp.Services
@using AccountingApp.Models
@inject IAuthService AuthService
@inject NavigationManager Navigation
@layout Layout.EmptyLayout

<div class="min-h-screen bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-2xl w-full max-w-md p-8">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800">ğŸ’¼ Accounting</h1>
            <p class="text-gray-500 mt-2">Your Financial Companion</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
                @errorMessage
            </div>
        }

        <div class="space-y-4">
            <div>
                <label class="block text-gray-700 font-semibold mb-2">ğŸ“§ Email</label>
                <input type="email" 
                       @bind="email" 
                       placeholder="your@email.com"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <div>
                <label class="block text-gray-700 font-semibold mb-2">ğŸ” Password</label>
                <input type="password" 
                       @bind="password" 
                       placeholder="Min 6 characters"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>

            <button @onclick="HandleLogin" 
                    class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 rounded-lg transition">
                ğŸ”“ Login
            </button>

            <button @onclick="ShowRegister" 
                    class="w-full bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 rounded-lg transition">
                ğŸ“ New User? Register
            </button>
        </div>
    </div>
</div>

@code {
    private string email = "";
    private string password = "";
    private string errorMessage = "";

    private async Task HandleLogin()
    {
        errorMessage = "";
        if (string.IsNullOrEmpty(email) || string.IsNullOrEmpty(password))
        {
            errorMessage = "Email aur Password required hain";
            return;
        }

        var user = await AuthService.LoginAsync(email, password);
        if (user != null)
        {
            // Save user session here (For simplicity in this demo, just navigating)
            Navigation.NavigateTo("/dashboard");
        }
        else
        {
            errorMessage = "Invalid email or password";
        }
    }

    private void ShowRegister()
    {
        errorMessage = "";
        Navigation.NavigateTo("/register");
    }
}

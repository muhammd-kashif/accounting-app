@page "/customer-ledger/{customerid:int}"
@rendermode InteractiveServer
@using AccountingApp.Services
@using AccountingApp.Models
@inject ICustomerService CustomerService
@inject NavigationManager Navigation

<div class="p-4 md:p-8 bg-gray-50 min-h-screen">

    <button class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mb-4" type="button" @onclick="GoBack">
        ‚Üê Back to Customers
    </button>

    @if (isLoading)
    {
        <div class="flex items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500"></div>
            <p class="text-gray-500 ml-4">Loading customer ledger...</p>
        </div>
    }
    else if (customer == null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <p class="font-semibold">‚ö†Ô∏è Customer not found!</p>
        </div>
    }
    else
    {
        <!-- Customer Info Card -->
        <div class="bg-white shadow-lg rounded-lg p-6 mb-6">
            <h2 class="text-3xl font-bold mb-2 text-gray-800">üë§ @customer.Name</h2>
            <p class="text-gray-600 mb-2">üìû Phone: @customer.Phone</p>
            @if (!string.IsNullOrEmpty(customer.Email))
            {
                <p class="text-gray-600 mb-2">üìß Email: @customer.Email</p>
            }

            <!-- Summary Cards -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-6">
                <div class="bg-gray-100 rounded-lg p-4 text-center border-l-4 border-gray-500">
                    <div class="text-gray-500 uppercase text-xs font-bold mb-1">Opening Balance</div>
                    <div class="font-bold text-2xl text-gray-700">Rs. @customer.OpeningBalance.ToString("N0")</div>
                </div>
                <div class="bg-green-50 rounded-lg p-4 text-center border-l-4 border-green-500">
                    <div class="text-gray-500 uppercase text-xs font-bold mb-1">Total Sales</div>
                    <div class="font-bold text-2xl text-green-600">Rs. @customer.TotalSales.ToString("N0")</div>
                </div>
                <div class="bg-blue-50 rounded-lg p-4 text-center border-l-4 border-blue-500">
                    <div class="text-gray-500 uppercase text-xs font-bold mb-1">Total Received</div>
                    <div class="font-bold text-2xl text-blue-600">Rs. @customer.TotalReceived.ToString("N0")</div>
                </div>
                <div class="bg-yellow-50 rounded-lg p-4 text-center border-l-4 border-yellow-500">
                    <div class="text-gray-500 uppercase text-xs font-bold mb-1">Net Balance</div>
                    <div class="font-bold text-2xl @(customer.NetBalance > 0 ? "text-red-600" : customer.NetBalance < 0 ? "text-green-600" : "text-gray-600")">
                        Rs. @Math.Abs(customer.NetBalance).ToString("N0")
                    </div>
                    <div class="text-xs text-gray-500 mt-1">
                        @(customer.NetBalance > 0 ? "(Receivable)" : customer.NetBalance < 0 ? "(Advance)" : "(Settled)")
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Controls -->
        <div class="bg-white shadow rounded-lg p-4 mb-6 flex flex-wrap items-end gap-4">
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-1">From Date</label>
                <input type="date" @bind="fromDate" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
            </div>
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-1">To Date</label>
                <input type="date" @bind="toDate" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
            </div>
            <div class="flex gap-2">
                <button @onclick="ApplyFilter" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition-colors">
                    üîç Filter
                </button>
                <button @onclick="ResetFilter" class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-2 px-6 rounded-lg transition-colors">
                    üîÑ Reset
                </button>
            </div>
        </div>

        <!-- Ledger Table -->
        <div class="bg-white shadow-lg rounded-lg p-6">
            <h3 class="font-bold text-xl text-gray-700 mb-4">üìí Ledger Entries</h3>

            @if (!pagedLedger.Any())
            {
                <div class="text-center py-8 text-gray-500">
                    <p class="text-lg">No ledger entries found for this customer.</p>
                    <p class="text-sm mt-2">Add sales or payments to see transactions here.</p>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full table-auto border border-gray-200">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="px-4 py-3 text-left text-gray-700 uppercase text-xs font-bold border-b">Date</th>
                                <th class="px-4 py-3 text-left text-gray-700 uppercase text-xs font-bold border-b">Description</th>
                                <th class="px-4 py-3 text-right text-gray-700 uppercase text-xs font-bold border-b">Debit (Received)</th>
                                <th class="px-4 py-3 text-right text-gray-700 uppercase text-xs font-bold border-b">Credit (Sales)</th>
                                <th class="px-4 py-3 text-right text-gray-700 uppercase text-xs font-bold border-b">Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in pagedLedger)
                            {
                                <tr class="hover:bg-gray-50 border-b">
                                    <td class="px-4 py-3 text-sm">@entry.Date.ToString("dd MMM yyyy")</td>
                                    <td class="px-4 py-3 text-sm">@entry.Description</td>
                                    <td class="px-4 py-3 text-right text-sm @(entry.Debit > 0 ? "text-green-600 font-semibold" : "text-gray-400")">
                                        @(entry.Debit > 0 ? entry.Debit.ToString("N2") : "-")
                                    </td>
                                    <td class="px-4 py-3 text-right text-sm @(entry.Credit > 0 ? "text-red-600 font-semibold" : "text-gray-400")">
                                        @(entry.Credit > 0 ? entry.Credit.ToString("N2") : "-")
                                    </td>
                                    <td class="px-4 py-3 text-right font-bold text-sm @(entry.Balance > 0 ? "text-red-600" : entry.Balance < 0 ? "text-green-600" : "text-gray-600")">
                                        Rs. @Math.Abs(entry.Balance).ToString("N2")
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination Controls -->
                <div class="flex justify-between items-center mt-4">
                    <button class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded disabled:opacity-50" @onclick="PrevPage" disabled="@(currentPage == 1)">‚Üê Previous</button>
                    <span>Page @currentPage of @totalPages</span>
                    <button class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded disabled:opacity-50" @onclick="NextPage" disabled="@(currentPage == totalPages)">Next ‚Üí</button>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public int customerid { get; set; }

    private CustomerBalanceDto? customer;
    private List<LedgerEntry> ledgerEntries = new();
    private List<LedgerEntry> pagedLedger = new();
    private bool isLoading = true;

    private DateTime? fromDate = new DateTime(DateTime.Now.Year, 1, 1);
    private DateTime? toDate = DateTime.Now;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages => (int)Math.Ceiling((double)ledgerEntries.Count / pageSize);

    protected override async Task OnInitializedAsync() => await LoadLedger();

    protected override async Task OnParametersSetAsync() => await LoadLedger();

    private async Task LoadLedger()
    {
        isLoading = true;
        try
        {
            customer = await CustomerService.GetCustomerBalanceByIdAsync(customerid);
            ledgerEntries = await CustomerService.GetCustomerLedgerAsync(customerid, fromDate, toDate);

            currentPage = 1;
            UpdatePagedLedger();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading customer ledger: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void UpdatePagedLedger()
    {
        pagedLedger = ledgerEntries.Skip((currentPage - 1) * pageSize).Take(pageSize).ToList();
    }

    private async Task ApplyFilter()
    {
        await LoadLedger();
    }

    private async Task ResetFilter()
    {
        fromDate = new DateTime(DateTime.Now.Year, 1, 1);
        toDate = DateTime.Now;
        await LoadLedger();
    }

    private void PrevPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            UpdatePagedLedger();
        }
    }

    private void NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            UpdatePagedLedger();
        }
    }

    private void GoBack() => Navigation.NavigateTo("/customers");
}

@page "/customer-ledger/{customerid:int}"
@rendermode InteractiveServer
@using AccountingApp.Services
@using AccountingApp.Models
@inject ICustomerService CustomerService
@inject NavigationManager Navigation

<div class="p-4 md:p-8 bg-gray-50 min-h-screen">

    <button class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mb-4" type="button" @onclick="GoBack">
        ‚Üê Back to Customers
    </button>

    @if (isLoading)
    {
        <div class="flex flex-col items-center justify-center py-12">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mb-4"></div>
            <p class="text-gray-500 font-medium">Loading customer ledger...</p>
        </div>
    }
    else if (customer == null)
    {
        <div class="bg-red-50 border border-red-200 text-red-700 px-6 py-4 rounded-xl shadow-sm flex items-center gap-3">
            <span class="text-2xl">‚ö†Ô∏è</span>
            <p class="font-bold">Customer not found!</p>
        </div>
    }
    else
    {
        <!-- Customer Info Card -->
        <div class="bg-white shadow-sm rounded-xl p-6 mb-6 border border-gray-100">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
                <div>
                    <h2 class="text-2xl md:text-3xl font-bold text-gray-800">üë§ @customer.Name</h2>
                    <div class="flex flex-wrap gap-4 mt-2 text-sm text-gray-600">
                        <span class="flex items-center gap-1">üìû @customer.Phone</span>
                        @if (!string.IsNullOrEmpty(customer.Email))
                        {
                            <span class="flex items-center gap-1">üìß @customer.Email</span>
                        }
                    </div>
                </div>
                <div class="w-full md:w-auto">
                    <button class="w-full md:w-auto bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold py-2 px-4 rounded-lg transition-colors flex items-center justify-center gap-2" type="button" @onclick="GoBack">
                        <span>‚Üê</span> Back
                    </button>
                </div>
            </div>

            <!-- Summary Cards -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <div class="bg-gray-50 rounded-xl p-4 border border-gray-200">
                    <div class="text-gray-500 uppercase text-xs font-bold mb-1">Opening Balance</div>
                    <div class="font-bold text-xl md:text-2xl text-gray-700">Rs. @customer.OpeningBalance.ToString("N0")</div>
                </div>
                <div class="bg-green-50 rounded-xl p-4 border border-green-200">
                    <div class="text-green-600 uppercase text-xs font-bold mb-1">Total Sales</div>
                    <div class="font-bold text-xl md:text-2xl text-green-700">Rs. @customer.TotalSales.ToString("N0")</div>
                </div>
                <div class="bg-blue-50 rounded-xl p-4 border border-blue-200">
                    <div class="text-blue-600 uppercase text-xs font-bold mb-1">Total Received</div>
                    <div class="font-bold text-xl md:text-2xl text-blue-700">Rs. @customer.TotalReceived.ToString("N0")</div>
                </div>
                <div class="bg-yellow-50 rounded-xl p-4 border border-yellow-200">
                    <div class="text-yellow-700 uppercase text-xs font-bold mb-1">Net Balance</div>
                    <div class="font-bold text-xl md:text-2xl @(customer.NetBalance > 0 ? "text-red-600" : customer.NetBalance < 0 ? "text-green-600" : "text-gray-600")">
                        Rs. @Math.Abs(customer.NetBalance).ToString("N0")
                    </div>
                    <div class="text-xs font-medium mt-1 @(customer.NetBalance > 0 ? "text-red-500" : customer.NetBalance < 0 ? "text-green-500" : "text-gray-500")">
                        @(customer.NetBalance > 0 ? "Receivable (Dr)" : customer.NetBalance < 0 ? "Advance (Cr)" : "Settled")
                    </div>
                </div>
            </div>
        </div>

        <!-- Filter Controls -->
        <div class="bg-white shadow-sm rounded-xl p-5 mb-6 border border-gray-100">
            <div class="flex flex-col md:flex-row gap-4 items-end">
                <div class="w-full md:flex-1">
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">From Date</label>
                    <input type="date" @bind="fromDate" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
                </div>
                <div class="w-full md:flex-1">
                    <label class="block text-xs font-bold text-gray-500 uppercase mb-1">To Date</label>
                    <input type="date" @bind="toDate" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 outline-none" />
                </div>
                <div class="flex gap-2 w-full md:w-auto">
                    <button @onclick="ApplyFilter" class="flex-1 md:flex-none bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition-colors shadow-md">
                        Filter
                    </button>
                    <button @onclick="ResetFilter" class="flex-1 md:flex-none bg-gray-100 hover:bg-gray-200 text-gray-700 font-bold py-2 px-6 rounded-lg transition-colors border border-gray-200">
                        Reset
                    </button>
                </div>
            </div>
        </div>

        <!-- Ledger Table / Cards -->
        <div class="bg-white shadow-lg rounded-xl overflow-hidden border border-gray-100">
            <div class="p-4 border-b border-gray-100 bg-gray-50/50">
                <h3 class="font-bold text-lg text-gray-800 flex items-center gap-2">
                    üìí Ledger Entries
                    <span class="text-xs font-normal text-gray-500 bg-gray-200 px-2 py-1 rounded-full">@ledgerEntries.Count entries</span>
                </h3>
            </div>

            @if (!pagedLedger.Any())
            {
                <div class="text-center py-12 text-gray-500">
                    <div class="text-4xl mb-3">üì≠</div>
                    <p class="text-lg font-medium">No ledger entries found</p>
                    <p class="text-sm mt-1">Try changing dates or add a new transaction</p>
                </div>
            }
            else
            {
                <!-- Mobile Card View -->
                <div class="block md:hidden">
                    <div class="divide-y divide-gray-100">
                        @foreach (var entry in pagedLedger)
                        {
                            <div class="p-4 hover:bg-gray-50 transition-colors">
                                <div class="flex justify-between items-start mb-2">
                                    <div class="text-sm font-bold text-gray-800">@entry.Date.ToString("dd MMM yyyy")</div>
                                </div>
                                <div class="text-sm text-gray-600 mb-3 bg-gray-50 p-2 rounded-lg">@entry.Description</div>
                                
                                <div class="grid grid-cols-3 gap-2 text-sm border-t border-dashed border-gray-200 pt-3">
                                    <div>
                                        <div class="text-[10px] uppercase text-gray-400 font-bold">Debit</div>
                                        <div class="@(entry.Debit > 0 ? "text-green-600 font-bold" : "text-gray-300")">
                                            @(entry.Debit > 0 ? entry.Debit.ToString("N0") : "-")
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <div class="text-[10px] uppercase text-gray-400 font-bold">Credit</div>
                                        <div class="@(entry.Credit > 0 ? "text-red-600 font-bold" : "text-gray-300")">
                                            @(entry.Credit > 0 ? entry.Credit.ToString("N0") : "-")
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <div class="text-[10px] uppercase text-gray-400 font-bold">Balance</div>
                                        <div class="font-bold @(entry.Balance > 0 ? "text-red-600" : entry.Balance < 0 ? "text-green-600" : "text-gray-600")">
                                            @Math.Abs(entry.Balance).ToString("N0") <span class="text-[10px]">@(entry.Balance > 0 ? "Dr" : entry.Balance < 0 ? "Cr" : "")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Desktop Table View -->
                <div class="hidden md:block overflow-x-auto">
                    <table class="w-full text-sm text-left">
                        <thead class="text-xs text-gray-500 uppercase bg-gray-50 border-b">
                            <tr>
                                <th class="px-6 py-3 font-bold">Date</th>
                                <th class="px-6 py-3 font-bold">Description</th>
                                <th class="px-6 py-3 font-bold text-right">Debit (In)</th>
                                <th class="px-6 py-3 font-bold text-right">Credit (Out)</th>
                                <th class="px-6 py-3 font-bold text-right bg-gray-100">Balance</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            @foreach (var entry in pagedLedger)
                            {
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                                        @entry.Date.ToString("dd MMM yyyy")
                                    </td>
                                    <td class="px-6 py-4 text-gray-600 max-w-xs truncate">
                                        @entry.Description
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        @if (entry.Debit > 0)
                                        {
                                            <span class="text-green-600 font-medium bg-green-50 px-2 py-1 rounded">
                                                Rs. @entry.Debit.ToString("N2")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-300">-</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        @if (entry.Credit > 0)
                                        {
                                            <span class="text-red-600 font-medium bg-red-50 px-2 py-1 rounded">
                                                Rs. @entry.Credit.ToString("N2")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-300">-</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-right bg-gray-50/50">
                                        <span class="font-bold @(entry.Balance > 0 ? "text-red-600" : entry.Balance < 0 ? "text-green-600" : "text-gray-600")">
                                            Rs. @Math.Abs(entry.Balance).ToString("N2")
                                        </span>
                                        <span class="text-xs text-gray-400 ml-1">
                                            @(entry.Balance > 0 ? "Dr" : entry.Balance < 0 ? "Cr" : "-")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination Controls -->
                <div class="flex justify-between items-center p-4 border-t border-gray-100 bg-gray-50">
                    <button class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed text-sm font-medium shadow-sm transition-colors" 
                            @onclick="PrevPage" disabled="@(currentPage == 1)">
                        ‚Üê Previous
                    </button>
                    <span class="text-sm font-medium text-gray-600">
                        Page <span class="font-bold text-gray-900">@currentPage</span> of <span class="font-bold text-gray-900">@totalPages</span>
                    </span>
                    <button class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed text-sm font-medium shadow-sm transition-colors" 
                            @onclick="NextPage" disabled="@(currentPage == totalPages)">
                        Next ‚Üí
                    </button>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public int customerid { get; set; }

    private CustomerBalanceDto? customer;
    private List<LedgerEntry> ledgerEntries = new();
    private List<LedgerEntry> pagedLedger = new();
    private bool isLoading = true;

    private DateTime? fromDate = new DateTime(DateTime.Now.Year, 1, 1);
    private DateTime? toDate = DateTime.Now;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalPages => (int)Math.Ceiling((double)ledgerEntries.Count / pageSize);

    protected override async Task OnInitializedAsync() => await LoadLedger();

    protected override async Task OnParametersSetAsync() => await LoadLedger();

    private async Task LoadLedger()
    {
        isLoading = true;
        try
        {
            customer = await CustomerService.GetCustomerBalanceByIdAsync(customerid);
            ledgerEntries = await CustomerService.GetCustomerLedgerAsync(customerid, fromDate, toDate);

            currentPage = 1;
            UpdatePagedLedger();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading customer ledger: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void UpdatePagedLedger()
    {
        pagedLedger = ledgerEntries.Skip((currentPage - 1) * pageSize).Take(pageSize).ToList();
    }

    private async Task ApplyFilter()
    {
        await LoadLedger();
    }

    private async Task ResetFilter()
    {
        fromDate = new DateTime(DateTime.Now.Year, 1, 1);
        toDate = DateTime.Now;
        await LoadLedger();
    }

    private void PrevPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            UpdatePagedLedger();
        }
    }

    private void NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            UpdatePagedLedger();
        }
    }

    private void GoBack() => Navigation.NavigateTo("/customers");
}

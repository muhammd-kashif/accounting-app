
@page "/all-suppliers-ledger"
@rendermode InteractiveServer
@using AccountingApp.Services
@using AccountingApp.Models
@inject ISupplierService SupplierService
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<div class="p-4 md:p-8 bg-gray-50 min-h-screen">
    @* Header *@
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">üè¢ All Suppliers Ledger</h1>
            <p class="text-gray-500">Payable Summary & Balance Sheet</p>
        </div>
        
        <div class="flex gap-2">
            <button @onclick="ExportToPdf" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-6 rounded-lg flex items-center gap-2 shadow-sm">
                üìÑ Export PDF
            </button>
        </div>
    </div>

    @* Summary Cards *@
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="bg-white p-5 rounded-xl shadow-sm border-l-4 border-red-500">
            <div class="text-xs font-bold text-gray-400 uppercase">Total Payables (Dene Hain)</div>
            <div class="text-2xl font-bold text-red-600">Rs. @TotalPayable.ToString("N0")</div>
            <div class="text-xs text-gray-400 mt-1">@PayableCount Suppliers you owe</div>
        </div>
        <div class="bg-white p-5 rounded-xl shadow-sm border-l-4 border-green-500">
             <div class="text-xs font-bold text-gray-400 uppercase">Total Advance (Lene Hain)</div>
             <div class="text-2xl font-bold text-green-600">Rs. @Math.Abs(TotalAdvance).ToString("N0")</div>
             <div class="text-xs text-gray-400 mt-1">@AdvanceCount Suppliers with advance</div>
         </div>
        <div class="bg-gray-800 p-5 rounded-xl shadow-lg">
            <div class="text-xs font-bold text-gray-400 uppercase">Net Payable Exposure</div>
            <div class="text-3xl font-bold text-white">Rs. @((TotalPayable + TotalAdvance).ToString("N0"))</div>
        </div>
    </div>

    @* Filters *@
    <div class="bg-white p-2 rounded-lg shadow-sm mb-6 flex flex-wrap gap-2">
        <button @onclick='() => SetFilter("All")' 
                class="flex-1 md:flex-none px-4 py-2 rounded-lg font-bold text-sm whitespace-nowrap transition-colors @(activeFilter == "All" ? "bg-gray-800 text-white" : "text-gray-600 hover:bg-gray-100")">
            All Suppliers (@suppliers.Count)
        </button>
        <button @onclick='() => SetFilter("Payable")' 
                class="flex-1 md:flex-none px-4 py-2 rounded-lg font-bold text-sm whitespace-nowrap transition-colors @(activeFilter == "Payable" ? "bg-red-100 text-red-700 border border-red-200" : "text-gray-600 hover:bg-gray-100")">
            üî¥ Payables (@PayableCount)
        </button>
        <button @onclick='() => SetFilter("Advance")' 
                class="flex-1 md:flex-none px-4 py-2 rounded-lg font-bold text-sm whitespace-nowrap transition-colors @(activeFilter == "Advance" ? "bg-green-100 text-green-700 border border-green-200" : "text-gray-600 hover:bg-gray-100")">
            üü¢ Advance (@AdvanceCount)
        </button>
        <button @onclick='() => SetFilter("Zero")' 
                class="flex-1 md:flex-none px-4 py-2 rounded-lg font-bold text-sm whitespace-nowrap transition-colors @(activeFilter == "Zero" ? "bg-gray-200 text-gray-800" : "text-gray-600 hover:bg-gray-100")">
            Zero Balance
        </button>
    </div>

    @* Table *@
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        
        <!-- Mobile Card View -->
        <div class="block md:hidden pb-4">
             @if (isLoading)
            {
                <div class="p-8 text-center text-gray-500">
                    <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500 mx-auto mb-2"></div>
                    Loading...
                </div>
            }
            else if (!FilteredSuppliers.Any())
            {
                <div class="p-8 text-center text-gray-500">No suppliers found.</div>
            }
            else
            {
                <div class="space-y-4 px-4 pt-4">
                    @foreach (var s in FilteredSuppliers)
                    {
                        <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-100 flex flex-col gap-3">
                            <div class="flex justify-between items-start">
                                <div>
                                    <div class="font-bold text-gray-800 text-lg">@s.SupplierName</div>
                                    <div class="text-sm text-gray-500">üìû @s.Contact</div>
                                </div>
                                <div class="text-xs font-bold px-2 py-1 rounded @(s.NetBalance > 0 ? "bg-red-100 text-red-600" : s.NetBalance < 0 ? "bg-green-100 text-green-600" : "bg-gray-100 text-gray-600")">
                                    @(s.NetBalance > 0 ? "PAYABLE" : s.NetBalance < 0 ? "ADVANCE" : "SETTLED")
                                </div>
                            </div>
                            
                            <div class="flex justify-between items-end border-t border-dashed pt-3 mt-1">
                                <div>
                                    <div class="text-xs text-gray-400">Net Balance</div>
                                    <div class="font-bold text-xl @(s.NetBalance > 0 ? "text-red-600" : s.NetBalance < 0 ? "text-green-600" : "text-gray-600")">
                                        Rs. @Math.Abs(s.NetBalance).ToString("N0")
                                    </div>
                                </div>
                                <div class="text-right text-xs text-gray-400">
                                    Last Active: <br/>
                                    @if (s.LastActivityDate.HasValue)
                                    {
                                        <span class="@GetActivityColor(s.LastActivityDate)">@s.LastActivityDate.Value.ToString("dd MMM")</span>
                                    }
                                    else
                                    {
                                        <span>Never</span>
                                    }
                                </div>
                            </div>

                            <div class="flex gap-2 mt-2">
                                @if (s.NetBalance > 0)
                                {
                                    <a href="@GetWhatsAppLink(s)" target="_blank" class="bg-green-100 text-green-700 p-2 rounded-lg flex-1 text-center font-bold text-sm flex items-center justify-center gap-2">
                                        üì± WhatsApp
                                    </a>
                                }
                                <button @onclick="() => ViewLedger(s.SupplierId)" class="bg-blue-50 text-blue-600 p-2 rounded-lg flex-1 text-center font-bold text-sm flex items-center justify-center gap-2">
                                    üìë Ledger
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Desktop Table View -->
        <div class="hidden md:block overflow-x-auto">
            <table class="w-full min-w-[800px]">
                <thead class="bg-gray-100 border-b">
                    <tr>
                        <th class="px-6 py-3 text-left font-bold text-gray-600">Supplier</th>
                        <th class="px-6 py-3 text-left font-bold text-gray-600">Performance</th>
                        <th class="px-6 py-3 text-right font-bold text-gray-600">Total Billed</th>
                        <th class="px-6 py-3 text-right font-bold text-gray-600">Paid</th>
                        <th class="px-6 py-3 text-right font-bold text-gray-800 bg-gray-50">Net Balance</th>
                        <th class="px-6 py-3 text-center font-bold text-gray-600">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @if (isLoading)
                    {
                         <tr>
                            <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500 mx-auto mb-2"></div>
                                Loading Balances...
                            </td>
                        </tr>
                    }
                    else if (!FilteredSuppliers.Any())
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center text-gray-500">No suppliers found for this filter.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var s in FilteredSuppliers)
                        {
                            <tr class="hover:bg-gray-50 transition-colors group">
                                <td class="px-6 py-4">
                                    <div class="font-bold text-gray-800 text-lg flex items-center gap-2">
                                        @s.SupplierName
                                    </div>
                                    <div class="text-sm text-gray-500">üìû @s.Contact</div>
                                </td>
                                <td class="px-6 py-4 text-sm">
                                    <div class="text-xs text-gray-500 mt-1">
                                        Last Active: 
                                        @if (s.LastActivityDate.HasValue)
                                        {
                                            <span class="@GetActivityColor(s.LastActivityDate)">@s.LastActivityDate.Value.ToString("dd MMM")</span> 
                                            <span class="text-gray-400">(@((DateTime.Now - s.LastActivityDate.Value).Days) days ago)</span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">Never</span>
                                        }
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-right text-gray-500">@s.TotalBills.ToString("N0")</td>
                                <td class="px-6 py-4 text-right text-gray-500">@s.TotalPaid.ToString("N0")</td>
                                <td class="px-6 py-4 bg-gray-50">
                                    <div class="flex flex-col items-end">
                                        <div class="font-bold text-lg @(s.NetBalance > 0 ? "text-red-600" : s.NetBalance < 0 ? "text-green-600" : "text-gray-400")">
                                            Rs. @Math.Abs(s.NetBalance).ToString("N0")
                                        </div>
                                        <div class="text-[10px] uppercase font-bold tracking-wide text-gray-400">
                                            @(s.NetBalance > 0 ? "Payable" : s.NetBalance < 0 ? "Advance" : "Settled")
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-center">
                                    <div class="flex justify-center gap-2">
                                        @if (s.NetBalance > 0)
                                        {
                                            <a href="@GetWhatsAppLink(s)" target="_blank" 
                                               class="bg-green-500 hover:bg-green-600 text-white p-2 rounded-lg shadow-sm" 
                                               title="Send Payment Reminder on WhatsApp">
                                                üì±
                                            </a>
                                        }
                                        <button @onclick="() => ViewLedger(s.SupplierId)" class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-2 rounded-lg text-sm font-bold shadow-sm">
                                            üìë View Ledger
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private List<SupplierBalanceDto> suppliers = new();
    private string activeFilter = "All"; // All, Payable, Advance, Zero
    private bool isLoading = true;

    private decimal TotalPayable => suppliers.Where(s => s.NetBalance > 0).Sum(s => s.NetBalance);
    private decimal TotalAdvance => suppliers.Where(s => s.NetBalance < 0).Sum(s => s.NetBalance);
    private int PayableCount => suppliers.Count(s => s.NetBalance > 0);
    private int AdvanceCount => suppliers.Count(s => s.NetBalance < 0);

    private List<SupplierBalanceDto> FilteredSuppliers => activeFilter switch
    {
        "Payable" => suppliers.Where(s => s.NetBalance > 0).ToList(),
        "Advance" => suppliers.Where(s => s.NetBalance < 0).ToList(),
        "Zero" => suppliers.Where(s => s.NetBalance == 0).ToList(),
        _ => suppliers
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        suppliers = await SupplierService.GetSupplierBalancesAsync();
        
        // Default sort: Highest Payable first (Debt you owe is priority usually, or maybe not?)
        suppliers = suppliers.OrderByDescending(s => s.NetBalance).ToList();
        
        isLoading = false;
    }

    private void SetFilter(string filter)
    {
        activeFilter = filter;
    }

    private void ViewLedger(int id)
    {
        Navigation.NavigateTo($"/supplier-ledger/{id}");
    }

    private string GetActivityColor(DateTime? date)
    {
        if (!date.HasValue) return "text-gray-400";
        var days = (DateTime.Now - date.Value).Days;
        if (days <= 7) return "text-green-600 font-bold";
        if (days <= 30) return "text-yellow-600";
        return "text-red-500 font-bold";
    }

    private string GetWhatsAppLink(SupplierBalanceDto s)
    {
        var message = Uri.EscapeDataString($"Salam {s.SupplierName}, payment of Rs. {s.NetBalance:N0} is processed/pending.");
        var phone = s.Contact.StartsWith("0") ? "92" + s.Contact.Substring(1) : s.Contact;
        return $"https://wa.me/{phone}?text={message}";
    }

    private async Task ExportToPdf()
    {
        var headers = new string[] { "Supplier", "Phone", "Total Billed", "Paid", "Net Balance" };
        var body = FilteredSuppliers.Select(s => new string[] 
        { 
            s.SupplierName, 
            s.Contact, 
            s.TotalBills.ToString("N0"), 
            s.TotalPaid.ToString("N0"), 
            s.NetBalance.ToString("N0") + (s.NetBalance > 0 ? " (Payable)" : s.NetBalance < 0 ? " (Adv)" : "")
        }).ToList();

        var fileName = $"All_Suppliers_Ledger_{DateTime.Now:yyyyMMdd}.pdf";
        await JSRuntime.InvokeVoidAsync("generateTablePdf", fileName, "All Suppliers Summary", headers, body);
    }
}
